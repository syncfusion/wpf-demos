<layout:SampleLayoutWindow x:Class="Annotation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
        xmlns:local="clr-namespace:Annotation" ResizeMode="CanResizeWithGrip"
        xmlns:layout="clr-namespace:Syncfusion.Windows.SampleLayout;assembly=Syncfusion.Chart.Wpf.SampleLayout"
        UserOptionsVisibility="Collapsed" 
        WindowStartupLocation="CenterScreen"
        Title="ToolTip" >

    <Grid x:Name="mainGrid">

        <Grid.DataContext>
            <local:ViewModel/>
        </Grid.DataContext>
        
        <Grid.Resources>
            
            <Style x:Key="line" TargetType="Line">
                <Setter Property="Stroke" Value="#b7b7b7"/>
                <Setter Property="StrokeThickness" Value="1"/>
            </Style>
           
            <DataTemplate x:Key="tooltipTemplate">
                <Grid Margin="12,0,0,5">
                    <Path Data="F1M417.0005,222.5926L469.8505,222.5926C473.5995,222.5926,476.6675,225.6596,476.6675,
                                229.4086L476.6675,252.9816C476.6675,256.7306,473.5995,259.7986,469.8505,259.7986L448.4665,
                                259.7986L443.2125,264.3426L438.6675,259.7986L417.0005,259.7986C413.2515,259.7986,410.1845,
                                256.7306,410.1845,252.9816L410.1845,229.4086C410.1845,225.6596,413.2515,222.5926,417.0005,222.5926"
                          Fill="#FFFFCE05" Height="52" Stretch="Fill" Width="96" Margin="-60,0,0,0"/>
                    <StackPanel Orientation="Horizontal" Margin="4,0,0,0">
                        <Ellipse Height="33" Width="33" Margin="-85,-5,0,0" Stroke="Black" Fill="White" StrokeThickness="0.5"/>
                        <Path Data="M16.710899,36.727C20.7409,39.759457 25.747499,41.558827 31.1693,41.558827 36.588501,
                                    41.558827 41.596401,39.759457 45.627602,36.727 55.046902,37.911882 62.335999,
                                    45.946764 62.335999,55.688923L62.335999,64 0,64 0,55.688923C0,45.946764,7.2904,37.911882,
                                    16.710899,36.727z M31.169201,0C40.807137,0 48.622002,7.8164558 48.622002,
                                    17.455803 48.622002,27.095258 40.807137,34.909003 31.169201,34.909003 21.528767,
                                    34.909003 13.715,27.095258 13.715,17.455803 13.715,7.8164558 21.528767,0 31.169201,0z" 
                              Stretch="Uniform" Fill="#606060" Height="20" Width="20" Margin="-85,-5,0,0" 
                              RenderTransformOrigin="0.5,0.5"/>
                        <StackPanel Orientation="Vertical" Margin="-25,-5,0,0" HorizontalAlignment="Left" 
                                    VerticalAlignment="Center">
                            <TextBlock Text="{Binding PlayerName}" FontSize="12" 
                                       FontWeight="Bold" Foreground="#606060"/>
                            <TextBlock Text="{Binding Score}"    FontSize="12" FontWeight="Bold" 
                                       Foreground="#606060" Margin="5,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </DataTemplate>
            
            <DataTemplate x:Key="labelTemplate">
                <TextBlock Text="{Binding LabelContent}" Foreground="#606060" FontSize="12"/>
            </DataTemplate>
            
        </Grid.Resources>
        
        <chart:SfChart Margin="10" x:Name="FastlineChart" Background="White">
            
            <chart:SfChart.Header>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="AUS 201/4" FontSize="30" Foreground="#4f4f4f" FontWeight="Bold"/>
                </StackPanel>
            </chart:SfChart.Header>
            
            <chart:SfChart.Annotations>
                
                <chart:ImageAnnotation X1="2" Y1="8.2" X2="2.6" Y2="9.3" ShowToolTip="True" 
                                       ToolTipTemplate="{StaticResource tooltipTemplate}"
                                       ToolTipPlacement="Top" ToolTipContent="{Binding DataModel[1]}" 
                                       HorizontalAlignment="Center" 
                                       ImageSource="Images\ball.jpg"/>
                
                <chart:ImageAnnotation X1="7" Y1="11.2" X2="7.6" Y2="12.3" HorizontalAlignment="Center" 
                                       ImageSource="Images\ball.jpg"   
                                       ShowToolTip="True" ToolTipContent="{Binding DataModel[6]}" 
                                       ToolTipTemplate="{StaticResource tooltipTemplate}"
                                       ToolTipPlacement="Top"/>
                
                <chart:ImageAnnotation X1="12" Y1="14.2" X2="12.6" Y2="15.3" HorizontalAlignment="Center" 
                                       ImageSource="Images\ball.jpg" 
                                       ShowToolTip="True" ToolTipContent="{Binding DataModel[11]}"  
                                       ToolTipTemplate="{StaticResource tooltipTemplate}" 
                                       ToolTipPlacement="Top"/>
                
                <chart:ImageAnnotation X1="19" Y1="10.2" X2="19.6" Y2="11.3" HorizontalAlignment="Center" 
                                       ImageSource="Images\ball.jpg" 
                                       ShowToolTip="True" ToolTipContent="{Binding DataModel[18]}" 
                                       ToolTipTemplate="{StaticResource tooltipTemplate}" 
                                       ToolTipPlacement="Top"/>
            </chart:SfChart.Annotations>
            
            <chart:SfChart.PrimaryAxis>
                <chart:NumericalAxis Header="Overs" Interval="1" Foreground="#606060" 
                                     ShowGridLines="False" 
                                     LabelTemplate="{StaticResource labelTemplate}" 
                                     MajorTickLineStyle="{StaticResource line}"
                                     AxisLineStyle="{StaticResource line}"/>
            </chart:SfChart.PrimaryAxis>
            
            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis Minimum="0" Maximum="20" Header="Runs" 
                                     ShowGridLines="True" Foreground="#606060"
                                     LabelTemplate="{StaticResource labelTemplate}" 
                                     MajorTickLineStyle="{StaticResource line}"
                                     AxisLineStyle="{StaticResource line}"/>
            </chart:SfChart.SecondaryAxis>

            <chart:ColumnSeries XBindingPath="Over" YBindingPath="Runs" 
                                ItemsSource="{Binding DataModel}" Interior="#33af7c"/>
        </chart:SfChart>
    </Grid>
</layout:SampleLayoutWindow>
