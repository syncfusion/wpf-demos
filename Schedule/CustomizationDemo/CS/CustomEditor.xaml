<Window
    x:Class="CustomizationDemo.CustomEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CustomizationDemo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sfInput="clr-namespace:Syncfusion.Windows.Controls.Input;assembly=Syncfusion.SfInput.Wpf"
    xmlns:shared="clr-namespace:Syncfusion.Windows.Shared;assembly=Syncfusion.Shared.Wpf"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    x:Name="customEditor"
    Title="Custom Editor"
    Width="830"
    Height="530"
    syncfusion:SkinStorage.VisualStyle="Metro"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontFamily" Value="Segoe UI" />
        </Style>

        <Style TargetType="syncfusion:DateTimeEdit">
            <Setter Property="Pattern" Value="ShortDate" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="BorderBrush" Value="DarkGray" />
            <Setter Property="BorderThickness" Value="0.5" />
            <Setter Property="Margin" Value="5,0,5,5" />
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="5,0,5,5" />
        </Style>
    </Window.Resources>

    <Grid Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition Width="600" />
        </Grid.ColumnDefinitions>
        <ScrollViewer
            x:Name="scroll"
            Background="LightGray"
            VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock
                    Margin="2"
                    FontSize="24"
                    Foreground="#757575"
                    Text="Details" />

                <TextBlock
                    Height="25"
                    Margin="5"
                    Foreground="Black"
                    Text="When" />

                <syncfusion:DateTimeEdit
                    x:Name="editstartmonth"
                    Height="25"
                    Margin="5,0,5,5"
                    DateTime="{Binding Appointment.StartTime, Mode=OneWay}"
                    Pattern="ShortDate" />

                <TextBlock
                    Height="25"
                    Margin="5"
                    Foreground="Black"
                    Text="Start" />

                <shared:DateTimeEdit
                    x:Name="editstarttime"
                    Height="25"
                    Margin="5,0,5,5"
                    DateTime="{Binding Appointment.StartTime, Mode=OneWay}"
                    IsButtonPopUpEnabled="False"
                    IsVisibleRepeatButton="True"
                    Pattern="ShortTime" />

                <TextBlock
                    Height="25"
                    Margin="5"
                    Foreground="Black"
                    Text="How Long" />
                <syncfusion:DateTimeEdit
                    x:Name="editendmonth"
                    Height="25"
                    Margin="5,0,5,5"
                    DateTime="{Binding Appointment.EndTime, Mode=OneWay}"
                    Pattern="ShortDate" />

                <TextBlock
                    Height="25"
                    Margin="5"
                    Foreground="Black"
                    Text="End" />
                <shared:DateTimeEdit
                    x:Name="editendtime"
                    Height="25"
                    Margin="5,0,5,5"
                    DateTime="{Binding Appointment.EndTime, Mode=OneWay}"
                    IsButtonPopUpEnabled="False"
                    IsVisibleRepeatButton="True"
                    Pattern="ShortTime" />

                <TextBlock
                    Height="25"
                    Margin="5"
                    Foreground="Black"
                    Text="Where" />
                <sfInput:SfTextBoxExt
                    x:Name="where"
                    Height="25"
                    Margin="5,0,5,5"
                    Text="{Binding Appointment.Location, Mode=OneWay}" />

                <StackPanel x:Name="showmorepanel">
                    <TextBlock Margin="5" Text="Reminder" />
                    <ComboBox
                        x:Name="reminder"
                        Height="25"
                        Margin="5,0,5,5"
                        SelectedItem="{Binding Appointment.ReminderTime, Mode=OneWay}" />

                    <TextBlock
                        Height="25"
                        Margin="5"
                        Foreground="Black"
                        Text="Appointment Type" />
                    <ComboBox
                        x:Name="apptype"
                        Height="25"
                        Margin="5,0,5,5"
                        SelectedItem="{Binding Appointment.AppointmentType, Mode=OneWay}" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        <Border Grid.Column="1">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="0.1*" />
                    <RowDefinition Height="0.8*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.6*" />
                    <ColumnDefinition Width="0.4*" />
                </Grid.ColumnDefinitions>
                <sfInput:SfTextBoxExt
                    x:Name="sub"
                    VerticalAlignment="Center"
                    BorderThickness="0"
                    FontFamily="Segoe UI"
                    FontSize="23"
                    FontWeight="ExtraLight"
                    Foreground="#666666"
                    Text="{Binding Appointment.Subject, Mode=OneWay}"
                    TextWrapping="Wrap">
                    <sfInput:SfTextBoxExt.WatermarkTemplate>
                        <DataTemplate>
                            <TextBlock
                                FontFamily="Segoe UI"
                                Foreground="#666666"
                                Text="Add a Subject" />
                        </DataTemplate>
                    </sfInput:SfTextBoxExt.WatermarkTemplate>
                </sfInput:SfTextBoxExt>
                <StackPanel
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
