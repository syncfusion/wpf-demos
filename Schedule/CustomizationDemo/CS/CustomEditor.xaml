                    BorderBrush="#666666"
                    BorderThickness="0,1,0,0" />

                <sfInput:SfTextBoxExt
                    x:Name="notes"
                    Grid.Row="2"
                    Grid.ColumnSpan="2"
                    VerticalAlignment="Top"
                    BorderThickness="0"
                    FontFamily="Segoe UI"
                    FontSize="18"
                    FontWeight="ExtraLight"
                    Foreground="#666666"
                    Text="{Binding Appointment.Notes}"
                    TextWrapping="Wrap">
                    <sfInput:SfTextBoxExt.WatermarkTemplate>
                        <DataTemplate>
                            <TextBlock
                                FontFamily="Segoe UI"
                                Foreground="#666666"
                                Text="Notes" />
                        </DataTemplate>
                    </sfInput:SfTextBoxExt.WatermarkTemplate>
