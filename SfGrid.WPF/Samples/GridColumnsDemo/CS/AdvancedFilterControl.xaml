                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Width="20"
                                    Margin="3,0,3,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Focusable="False"
                                    Foreground="{TemplateBinding Foreground}"
                                    Template="{StaticResource DropDownButtonTemplate}" />

