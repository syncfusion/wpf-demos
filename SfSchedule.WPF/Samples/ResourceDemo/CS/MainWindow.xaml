                                    <Border Padding="5" Background="{Binding BackgroundBrush}" BorderBrush="White" BorderThickness="3">
                                        <StackPanel Orientation="Vertical">
                                            <Image Source="{Binding ResourceImageUri}" Height="64" Width="64"/>
                                            <TextBlock  Foreground="White" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"  Text="{Binding DisplayName}"  />
