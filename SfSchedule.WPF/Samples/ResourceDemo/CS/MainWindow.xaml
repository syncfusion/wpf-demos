                <Style TargetType="syncfusion:MonthViewItemHeader">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="syncfusion:MonthViewItemHeader">
                                <Grid>
                                    <Border Background="{Binding BackgroundBrush}" BorderBrush="Green" BorderThickness="2">
                                        <StackPanel Orientation="Vertical">
                                            <Image Source="{Binding ResourceImageUri}" Height="64" Width="64"/>
                                            <TextBlock Foreground="White" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"  Text="{Binding DisplayName}">
