        <tool:DropDownButton Padding="1" Label="{Binding Label}" Style="{StaticResource DropDownButtonStyle}" IsSmallImageVisible="False" x:Name="PickerTemp">
        </tool:DropDownButton>
    </Grid>
</UserControl>
