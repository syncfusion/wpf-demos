<Window x:Class="DiagramBuilder.View.ZoomPanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zoom" Height="300" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" 
        xmlns:view="clr-namespace:DiagramBuilder.View" >
    <Window.Resources>
        <ResourceDictionary>
        <Style  TargetType="{x:Type RadioButton}">
            <Setter Property="Margin" Value="15,5,0,0" />
            <Setter Property="IsChecked" Value="False" />
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Grid.Row="0">
            <TextBlock Text="Magnification:" TextDecorations="Underline" Margin="5,0,0,5" />
        </StackPanel>
        <StackPanel Orientation="Vertical"  Grid.Row="1" x:Name="l">
            <RadioButton  x:Name="zoom1" IsChecked="{Binding DataContext.ZoomParameter.IsTwoHundredPercentZoom,Mode=TwoWay}" Checked="RadioButton_Checked" Content="200%"  />
            <RadioButton  x:Name="zoom2" IsChecked="{Binding DataContext.ZoomParameter.IsOneFiftyPercentZoom,Mode=TwoWay}" Checked="RadioButton_Checked" Content="150%"  />
            <RadioButton  x:Name="zoom3" IsChecked="{Binding DataContext.ZoomParameter.IsHundredPercentZoom,Mode=TwoWay}" Checked="RadioButton_Checked" Content="100%(Actual Size)"  CommandParameter="100"  />
            <RadioButton  x:Name="zoom4" IsChecked="{Binding DataContext.ZoomParameter.IsSeventyFivePercentZoom,Mode=TwoWay}" Checked="RadioButton_Checked" Content="75%" />
            <RadioButton  x:Name="zoom5" IsChecked="{Binding DataContext.ZoomParameter.IsFiftyPercentZoom,Mode=TwoWay}" Checked="RadioButton_Checked" Content="50%"  />
            <RadioButton  x:Name="Width" IsChecked="{Binding DataContext.ZoomParameter.IsPageWidthZoom,Mode=TwoWay}" Checked="RadioButton_Checked" Content="Page Width" />
            <RadioButton  x:Name="Page" IsChecked="{Binding DataContext.ZoomParameter.IsWholePageZoom,Mode=TwoWay}" Checked="RadioButton_Checked" Content="Whole Page"   />
            <StackPanel Orientation="Horizontal" >
                <RadioButton x:Name="percentage" IsChecked="{Binding DataContext.ZoomParameter.IsPercentageZoom,Mode=TwoWay}"  Checked="RadioButton_Checked"   Content ="Percentage" />
                <TextBox Margin="6,5,0,0" Text="{Binding DataContext.ZoomParameter.PercentageText}" Height="20" Width="50" x:Name="textbox" IsEnabled="False" />
            </StackPanel>
        </StackPanel>
        <Grid Grid.Row="3">
            <Border  BorderBrush="Gainsboro" BorderThickness="0,1,0,0" >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width=".5*"/>
                        <ColumnDefinition />
                        <ColumnDefinition Width=".5*"/>
                        <ColumnDefinition />
                        <ColumnDefinition Width=".5*" />
                    </Grid.ColumnDefinitions>
                    <Button x:Name="OkButton" Grid.Column="1" Content="OK" Height="25"  Click="Button_Click" IsEnabled="False"/>
                    <Button x:Name="CancelButton" Grid.Column="3" Content="Cancel" Height="25" Click="Button_Click" />
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
