<UserControl
    x:Class="FloorPlanner.AddAnnotation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:FloorPlanner"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:utility="clr-namespace:Syncfusion.UI.Xaml.Diagram.Utility;assembly=Syncfusion.SfDiagram.Wpf"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    mc:Ignorable="d"
    d:DesignHeight="700"
    d:DesignWidth="400">

    <Grid Background="#f2f2f2" FocusVisualStyle="{x:Null}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0"
                       Grid.ColumnSpan="2"
                       Margin="32,10,5,5"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       FontFamily="Segoe UI"
                       FontSize="24"
                       FontWeight="SemiBold"
                       Foreground="#231f20"
                       Text="Text properties" />
        
        <TextBlock Grid.Row="1"
                Grid.Column="0"
                Margin="35,10,0,0"
                FontFamily="Segoe UI"
                       Foreground="#231f20"
                       FontWeight="Light"
                       FontSize="16"
                Text="Title:" />

        <TextBox x:Name="text" Loaded="text_Loaded_2" Text="{Binding TitleText,Mode=TwoWay}" local:TextCommand.Command="{Binding TextChanged}"   Grid.Row="2" Margin="35,10,66,0" utility:FocusUtility.FocusOnLoad="True" Grid.ColumnSpan="2" Width="200"></TextBox>

        <TextBlock Grid.Row="3"
                       Grid.Column="0"
                       Margin="35,10,0,0"
                       FontFamily="Segoe UI"
                       Foreground="#231f20"
                       FontWeight="Light"
                       FontSize="16"
                       Text="Font:" />
        
        <ComboBox x:Name="Font"
                      Grid.Row="4"
                      Grid.ColumnSpan="2"
                      Margin="35,5,66,5"
                      Width="200"
                      ItemsSource="{Binding FamilyCollection}"
                      SelectedItem="{Binding TextFont,Mode=TwoWay}"
                      local:ComboboxCommand.Command="{Binding TitleFont}" />

        <TextBlock Grid.Row="5"
                       Grid.Column="0"
                       Margin="35,10,0,0"
                       FontFamily="Segoe UI"
                       Foreground="#231f20"
                        FontWeight="Light"
                       FontSize="16"
                       Text="FontSize:" />
        
        <ComboBox x:Name="Size"
                      Grid.Row="6"
                      Grid.Column="0"
                      Margin="35,5,66,5"
                      Width="200"
                      ItemsSource="{Binding SizeCollection}"
                      SelectedItem="{Binding TextSize,Mode=TwoWay}"
                      local:ComboboxCommand.Command="{Binding TitleFontSize}" Grid.ColumnSpan="2" />

        <StackPanel Grid.Row="7"
                        Grid.ColumnSpan="2"
                        Margin="35,10,0,0"
                        Orientation="Horizontal">

            <!--Command="{Binding BoldCommand}"-->
            <ToggleButton Margin="0,0,5,0" local:ButtonCommand.Command="{Binding BoldCommand}">
                <Viewbox Width="40" 
                             Height="20"
                             Stretch="Uniform">
                    <Grid>
                        <Path Data="F1M0,23.813L0,0.001 8.672,0.001C11.328,0.001 13.359,0.501 14.797,1.469 16.218,2.438 16.937,3.813 16.937,5.579 16.937,6.876 16.5,8.001 15.625,8.954 14.75,9.922 13.656,10.594 12.312,10.969L12.312,11.032C14,11.251 15.343,11.876 16.359,12.907 17.375,13.954 17.89,15.219 17.89,16.704 17.89,18.891 17.109,20.626 15.547,21.907 13.984,23.188 11.843,23.813 9.156,23.813L0,23.813 M5.359,3.954L5.359,9.594 7.718,9.594C8.828,9.594 9.703,9.329 10.343,8.797 10.968,8.266 11.297,7.516 11.297,6.579 11.297,4.829 9.984,3.954 7.375,3.954L5.359,3.954 M5.359,13.579L5.359,19.86 8.265,19.86C9.5,19.86 10.468,19.579 11.172,19.001 11.875,18.438 12.234,17.641 12.234,16.641 12.234,15.704 11.89,14.954 11.203,14.407 10.515,13.86 9.547,13.579 8.312,13.579L5.359,13.579" 
                              Fill="Black" />
                    </Grid>
                </Viewbox>
                <!--<TextBlock Text="B" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="ExtraBold" FontSize="18"></TextBlock>-->
            </ToggleButton>
            <ToggleButton Margin="0,0,5,0" local:ButtonCommand.Command="{Binding ItalicCommand}">
                <Viewbox Width="40"
                             Height="20"
                             Stretch="Uniform">
                    <Grid>
                        <Path Data="F1M2.844,23.813L0,23.813 5.031,0.001 7.906,0.001 2.844,23.813" Fill="Black" />
                    </Grid>
                </Viewbox>
                 <!--<TextBlock Text="I" Padding="3,0,3,0" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" FontStyle="Italic"></TextBlock>-->
            </ToggleButton>

            <syncfusion:ColorPickerPalette Width="100" Height="20" Color="{Binding TextColor,Mode=TwoWay}"
                                           local:ListBoxCommand.Command="{Binding ForeColorChanged}"></syncfusion:ColorPickerPalette>
            <!--<Button Margin="0,0,5,0"  x:Name="foreground" Command="{Binding ForgroundColor}">
                <Viewbox Width="40"
                             Height="25"
                             Stretch="Uniform">
                    <StackPanel>
                        <Path Data="F1M16.984,18.203L13.672,18.203 12.031,13.562 4.875,13.562 3.297,18.203 0,18.203 6.812,0 10.218,0 16.984,18.203 M11.234,11.109L8.703,3.843C8.625,3.609,8.547,3.234,8.468,2.703L8.422,2.703C8.328,3.187,8.25,3.562,8.156,3.843L5.656,11.109 11.234,11.109"
                              Fill="Black" />
                        <Path Margin="0,5,0,0"
                                  Data="F1M19,4L0,4 0,0 19,0z"
                                  Fill="{Binding TextColor}" />
                    </StackPanel>
                </Viewbox>
            </Button>-->

        </StackPanel>

        <!--<Grid Grid.Row="8"
                  Grid.ColumnSpan="2" Margin="1,5,0,5"
                  Visibility="{Binding Enabled,
                                      Converter={StaticResource BoolToVisibilityConverter}}">

            <syncfusion:ColorPickerPalette Width="300" Height="200" IsExpanded="True" Color="{Binding TextColor,Mode=TwoWay}"
                                           local:ListBoxCommand.Command="{Binding ForeColorChanged}"></syncfusion:ColorPickerPalette>
           
        </Grid>-->

      
        <Button Grid.Row="9" Width="100" 
                Margin="-25,10,5,5"
                    Grid.Column="0"                  
                    Content="Apply"
                     Command="{Binding OKCommand}"
                    Foreground="Black"
                     Padding="15,5,15,5" />

        <Button Grid.Row="9" Width="100"
                    Grid.Column="1"
                    Margin="-120,10,5,5"
                    Content="Cancel"
                    Padding="15,5,15,5"
                    Foreground="Black" Command="{Binding CancelCommand}" />

    </Grid>
</UserControl>
