<UserControl
    x:Class="UMLDiagramDesigner.LineEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:UMLDiagramDesigner"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Margin="35"
    d:DesignHeight="500"
    d:DesignWidth="400">
    <Grid>
        <Grid.Resources>
            <local:EnumTypeConverter x:Key="LineTypeConverter"/>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Margin="0,0,0,35">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock HorizontalAlignment="Left" FontSize="18" Margin="0,0,0,15" Foreground="#231f20" VerticalAlignment="Center" Text="Label"/>
            <TextBox Width="200" HorizontalAlignment="Left" Grid.Row="1" Foreground="#231f20" Text="{Binding Label, Mode=TwoWay}"/>
        </Grid>
        <RadioButton IsChecked="{Binding Path=LineType, Mode=TwoWay,
                                            Converter={StaticResource LineTypeConverter}, 
                                            ConverterParameter=Inheritance}" 
                     Margin="0,0,0,35" 
                     Grid.Row="1" 
                     HorizontalContentAlignment="Left" 
                     VerticalContentAlignment="Center"
                     GroupName="LineType" 
                     Command="{Binding Inherit}">
            <Grid  Margin="7,0,0,0" VerticalAlignment="Center" Width="130">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Rectangle HorizontalAlignment="Stretch" Stroke="#231f20" Height="2" VerticalAlignment="Center"/>
                <Path Grid.Column="1" Data="M2,0.5 L51.5,50 L2,99.5 L0.5,98 L0.5,2 z" Stretch="Fill" Width="15" Height="15" HorizontalAlignment="Right" Stroke="#231f20" StrokeThickness="2"/>
            </Grid>
        </RadioButton>
        <RadioButton IsChecked="{Binding Path=LineType, Mode=TwoWay,
                                            Converter={StaticResource LineTypeConverter},
                                            ConverterParameter=AggregateOrAssociate}" 
                     Margin="0,0,0,15" 
                     Name="Agg" 
                     Grid.Row="3"
                     GroupName="LineType" 
                     Command="{Binding AggOrAss}">
            <TextBlock Margin="7,0,0,0" Foreground="#231f20" FontSize="15" Text="Aggregate/Associate"/>
        </RadioButton>
        
        <ContentControl IsEnabled="{Binding ElementName=Agg, Path=IsChecked}" Margin="15,0,0,0" Grid.Row="4">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Vertical">
                    <TextBlock Foreground="#231f20" FontSize="15" Text="Head" Margin="0,0,0,15"/>
                    <RadioButton IsChecked="{Binding Path=Aggregation, Mode=TwoWay,
                                                    Converter={StaticResource LineTypeConverter}, 
                                                    ConverterParameter=Basic}" 
                                 Margin="0,0,0,15" 
                                 GroupName="Aggregate" 
                                 VerticalContentAlignment="Center" 
                                 Command="{Binding BasicAggregate}">
                        <Grid Margin="7,0,0,0" Width="120">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Rectangle Grid.Column="1" HorizontalAlignment="Stretch" Stroke="#231f20" Height="1" VerticalAlignment="Center"/>
                            <Path Data="M50,0 L100,50 L50,100 L0,50 z" Stretch="Fill" Width="15" Height="15" HorizontalAlignment="Right" Stroke="#231f20" StrokeThickness="2"/>
                        </Grid>
                    </RadioButton>
                    <RadioButton IsChecked="{Binding Path=Aggregation, Mode=TwoWay,
                                                        Converter={StaticResource LineTypeConverter}, 
                                                        ConverterParameter=Composition}"
                                 Margin="0,0,0,15" 
                                 GroupName="Aggregate"
                                 VerticalContentAlignment="Center"
                                 Command="{Binding CompositionAggregate}">
                        <Grid Margin="7,0,0,0" Width="120" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Rectangle Grid.Column="1" HorizontalAlignment="Stretch" Stroke="#231f20" Height="1" VerticalAlignment="Center"/>
                            <Path Data="M50,0 L100,50 L50,100 L0,50 z" Stretch="Fill" Fill="#231f20" Width="15" Height="15" HorizontalAlignment="Right" Stroke="#231f20" StrokeThickness="2"/>
                        </Grid>
                    </RadioButton>
                    <RadioButton  IsChecked="{Binding Path=Aggregation, Mode=TwoWay,
                                                        Converter={StaticResource LineTypeConverter},
                                                        ConverterParameter=None}"
                                  Margin="0,0,0,15" 
                                  GroupName="Aggregate" 
                                  VerticalContentAlignment="Center" 
                                  Command="{Binding NoAggregate}">
                        <Grid Margin="7,0,0,0" Width="120" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Rectangle Grid.ColumnSpan="2" HorizontalAlignment="Stretch" Stroke="#231f20" Height="1" VerticalAlignment="Center"/>
                            <Path Data="M2,0.5 L51.5,50 L2,99.5 L0.5,98 L0.5,2 z" Stretch="Fill" Width="15" Height="15" Stroke="#231f20" HorizontalAlignment="Right" StrokeThickness="2"/>
                        </Grid>
                    </RadioButton>
                </StackPanel>
                <StackPanel>
                    <TextBlock Foreground="#231f20" FontSize="15" Text="Tail" Margin="0,0,0,15"/>
                    <RadioButton IsChecked="{Binding Path=Association, Mode=TwoWay,
                                                        Converter={StaticResource LineTypeConverter},
                                                        ConverterParameter=BiDirectional}" 
                                 Margin="0,0,0,15"
                                 GroupName="Association" 
                                 VerticalContentAlignment="Center"
                                 Command="{Binding BiDirected}">
                        <Grid Margin="7,0,0,0" Width="120" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Rectangle Grid.ColumnSpan="2" HorizontalAlignment="Stretch" Stroke="#231f20" Height="1" VerticalAlignment="Center"/>
                            <Path Data="M2,0.5 L51.5,50 L2,99.5 L0.5,98 L0.5,2 z" Stretch="Fill" Width="15" Height="15" Stroke="#231f20" HorizontalAlignment="Right" StrokeThickness="2"/>
                        </Grid>
                    </RadioButton>
                    <RadioButton  IsChecked="{Binding Path=Association, Mode=TwoWay,
                                                        Converter={StaticResource LineTypeConverter},
                                                        ConverterParameter=UniDirectional}"
                                  Margin="0,0,0,15" 
                                  GroupName="Association"
                                  VerticalContentAlignment="Center" 
                                  Command="{Binding UniDirected}">
                        <Grid Margin="7,0,0,0" Width="120" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Rectangle HorizontalAlignment="Stretch" Stroke="#231f20" Height="1" VerticalAlignment="Center"/>
                            <Path Grid.ColumnSpan="2" Data="M0,0 L60,25 L0,50" Stretch="Fill" Width="15" Height="15" HorizontalAlignment="Right" Stroke="#231f20" StrokeThickness="2"/>
                        </Grid>
                    </RadioButton>
                </StackPanel>
            </StackPanel>
        </ContentControl>
    </Grid>
</UserControl>
