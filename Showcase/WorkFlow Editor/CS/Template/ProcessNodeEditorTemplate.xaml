                                <VisualState x:Name="Disabled" />
                                <VisualState x:Name="PointerOver">
                                    <Storyboard>
                                        <ColorAnimation Duration="0"
                                                        Storyboard.TargetName="rectangle"
                                                        Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                        To="#FFD3D3D6" />
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="FocusStates">
                                <VisualState x:Name="Focused" />
                                <VisualState x:Name="PointerFocused" />
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Rectangle x:Name="rectangle"
                                   Width="30"
                                   Height="30"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Fill="#FFF4F4F5"
                                   Stroke="Black" />
                        <Path x:Name="path"
                              Width="16"
                              Height="20"
                              Data="M33.978,27.679999L33.978,58.098995 41.374,58.098995 41.374,27.679999z M14.841001,27.679999L14.841001,58.098995 22.237,58.098995 22.237,27.679999z M4.0320003,22.430001L52.183002,22.430001 52.183002,63.995998 4.0320003,63.995998z M15.974001,0L40.194999,0 40.194999,7.7200003 56.166999,7.7200003 56.166999,15.995 0,15.995 0,7.7200003 15.974001,7.7200003z"
                              Fill="Black"
                              Stretch="Fill"
                              UseLayoutRounding="False" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <DataTemplate x:Key="ValueEditor">       
        <Grid x:Name="editor">
               
            <ScrollViewer>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0"
                       Margin="25,50,5,5"
                       FontFamily="Segoe UI"
                       FontSize="18"
                       FontWeight="Light"
                       Foreground="#231f20"
                       Text="Properties" />

                <TextBlock Grid.Row="1"
                       Margin="25,10,5,5"
                       FontFamily="Segoe UI"
                       FontSize="17"
                       FontWeight="Light"
                       Foreground="#231f20"
                       Text="Name" />

                <TextBox Grid.Row="2"
                     Grid.Column="0"
                     Width="250"
                     Margin="20,10,5,5"
                     FontFamily="Segoe UI"
                     FontSize="17"
                     FontWeight="Light"
                     Foreground="#231f20"
                     Text="{Binding DispalyText,
                                    Mode=TwoWay}" />

                <ToggleButton x:Name="property"
                          Grid.Row="3"
                          Margin="25,10,5,5"
                          FontFamily="Segoe UI"
                          FontWeight="Light"
                          Foreground="#231f20"
                          IsEnabled="{Binding IsNotDecision,
                                              Mode=TwoWay}"
                          IsChecked="{Binding IsPropertiesEnabled,
                                         Mode=TwoWay}"
                          
                           />

                <Border Grid.Row="4"
                    Grid.ColumnSpan="2"
                    Margin="25,10,5,5"
                    Visibility="{Binding Converter={StaticResource BoolToVisibilityConverter},
                                         Path=IsOn,
                                         ElementName=property}">

                    <ItemsControl ItemsSource="{Binding Properties, Mode=TwoWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Grid.Row="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="45" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="0"
                                           Grid.Column="0"
                                           Margin="0,20,0,0"
                                           FontFamily="Segoe UI"
                                           FontSize="17"
                                           FontWeight="Light"
                                           Foreground="#231f20"
                                           Text="Name" />

                                    <TextBox Grid.Row="1"
                                         Grid.Column="0"
                                         Width="215"
                                         Margin="0,10,5,0"
                                         FontFamily="Segoe UI"
                                         FontSize="17"
                                         FontWeight="Light"
                                         Foreground="#231f20"
                                         Text="{Binding Name,
                                                        Mode=TwoWay}" />

                                    <Button Grid.Row="1"
                                        Grid.Column="1"
                                        Margin="0,10,5,0"
                                        Background="White"
                                        Command="{Binding DataContext.DeleteProperty,
                                                          ElementName=editor}"
                                        CommandParameter="{Binding}"
                                        Padding="1"
                                        Style="{StaticResource delete}" />

                                    <RadioButton Grid.Row="2"
                                             Margin="0,20,0,0"
                                             Content="Numeric"
                                             FontFamily="Segoe UI"
                                             FontSize="12"
                                             FontWeight="Light"
                                             Foreground="#231f20"
                                             IsChecked="{Binding Type,
                                                                 Converter={StaticResource NumericTypeToVisibilityConverter}}"
                                             local:RadioButtonCommand.Command="{Binding Checked}" />

                                    <RadioButton x:Name="stringradio"
                                             Grid.Row="2"
                                             Margin="85,20,0,0"
                                             Content="String"
                                             FontFamily="Segoe UI"
                                             FontSize="12"
                                             FontWeight="Light"
                                             Foreground="#231f20"
                                             IsChecked="{Binding Type,
                                                                 Converter={StaticResource StringTypeToBoolConverter}}"
                                             local:RadioButtonCommand.Command="{Binding Checked}" />

                                    <TextBlock Grid.Row="3"
                                           Margin="0,20,0,0"
                                           FontFamily="Segoe UI"
                                           FontSize="17"
                                           FontWeight="Light"
                                           Foreground="#231f20"
                                           Text="Units"
                                           Visibility="{Binding Type,
                                                                Converter={StaticResource TypeToVisibiltyConverter}}" />

                                    <ComboBox Grid.Row="4"
                                          Grid.ColumnSpan="2"
                                          Width="250"
                                          Height="30"
                                          Margin="0,10,5,5"
                                          FontFamily="Segoe UI"
                                          FontSize="12"
                                          FontWeight="Light"
                                          Foreground="#231f20"
                                          ItemsSource="{Binding ValueType}"
                                          SelectedItem="{Binding PropertyValue,
                                                                 Mode=TwoWay}"
                                          SelectedValuePath="Content"
                                          Visibility="{Binding Type,
                                                               Converter={StaticResource TypeToVisibiltyConverter}}" />

                                    <Line Grid.Row="5" Grid.ColumnSpan="2" Stroke="White" Opacity="0.50" StrokeThickness="0.5"></Line>
                                    <Rectangle Grid.Row="5"
                                           Grid.ColumnSpan="2"
                                           Height="2"
                                           Margin="0,20,0,0"
                                           Opacity="0.50"
                                           Stroke="White"
                                           StrokeThickness="0.5" />

                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </Border>


                <Button Grid.Row="5"   
                    Width="100"
                    Margin="-135,5,5,5"
                     Grid.Column="0"
                    Command="{Binding AddProperty}"
                    CommandParameter="{Binding}"
                    Content="AddProperty"
                    FontFamily="Segoe UI"
                    FontSize="15"
                    FontWeight="Light"
                    Foreground="#231f20"
                    Visibility="{Binding Converter={StaticResource BoolToVisibilityConverter},
                                         Path=IsOn,
                                         ElementName=property}" />

                <Button Grid.Row="5"
                    Grid.Column="1"
                    Width="100"
                     Margin="-150,5,5,5"
                    Command="{Binding Save}"
                    Content="Save"
                    FontFamily="Segoe UI"
                    FontSize="15"
                    FontWeight="Light"
                    Foreground="#231f20"
                    Padding="32,3,32,3"
                    Visibility="{Binding Converter={StaticResource BoolToVisibilityConverter},
                                         Path=IsOn,
                                         ElementName=property}" />
                </Grid>
            </ScrollViewer>

        </Grid>      
    </DataTemplate>

    <DataTemplate x:Key="vtemplate">
        <Border Padding="10">
            <TextBlock FontFamily="Segoe UI"
                       FontSize="15"
                       FontWeight="ExtraBold"
                       Text="{Binding Path=Content,
                                      Mode=TwoWay}" />
        </Border>
    </DataTemplate>

    <DataTemplate x:Key="etempalte">
        <TextBox AcceptsReturn="True"
                
                 Text="{Binding Path=Content,
                                Mode=TwoWay}"
                 util:FocusUtility.FocusOnLoad="True" />
    </DataTemplate>
    
</ResourceDictionary>
