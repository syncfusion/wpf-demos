    <!--Style and Template for Node-->
    <DataTemplate x:Key="EditTemplate">
        <TextBox    TextWrapping="Wrap" Foreground="{Binding Path=Content.Foreground,Mode=TwoWay}" AcceptsReturn="True" Text="{Binding Path=Content.Text, Mode=TwoWay}"/>
    </DataTemplate>

    <DataTemplate x:Key="ViewTemplate">
        <StackPanel Orientation="Vertical">
            <TextBlock Foreground="{Binding Path=Content.Foreground,Mode=TwoWay}" TextWrapping="Wrap" >
                    <Run Text="{Binding Path=Content.Text, Mode=TwoWay}"></Run>
            </TextBlock>
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:Key="Startnodetemplate">
        <Border BorderBrush="{Binding BorderBrush}" BorderThickness="{Binding BorderThick}">
            <Grid Background="Transparent" Width="35" Height="35">
                <Ellipse x:Name="start" Fill="#FF70C923" Stroke="{Binding FillBrush}" />
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontFamily="Segoe UI"
                           FontSize="12"
                           Foreground="White"
                           Text="{Binding DispalyText,
                                          Mode=TwoWay}" />
            </Grid>
        </Border>
    </DataTemplate>

    <DataTemplate x:Key="Endnodetemplate">
        <Border BorderBrush="{Binding BorderBrush}" BorderThickness="{Binding BorderThick}">
            <Grid Width="35" Height="35" Background="Transparent">
                <Ellipse x:Name="end" Fill="#FFC63232"  Stroke="{Binding FillBrush}"/>
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontFamily="Segoe UI"
                           FontSize="12"
                           Foreground="White"
                           Text="{Binding DispalyText,
                                          Mode=TwoWay}" />
            </Grid>
        </Border>
    </DataTemplate>

    <DataTemplate x:Key="nodetemplate">
        <Border BorderBrush="{Binding BorderBrush}" BorderThickness="{Binding BorderThick}">
            <Grid Background="Transparent" Width="35" Height="35">
                <Ellipse x:Name="node" Fill="DeepSkyBlue" Stroke="{Binding FillBrush}" />
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontFamily="Segoe UI"
                           FontSize="12"
                           Foreground="White"
                           Text="{Binding DispalyText,
                                          Mode=TwoWay}" />
            </Grid>
        </Border>
    </DataTemplate>

    <DataTemplate x:Key="tasknodetemplate">
        <Border BorderBrush="{Binding BorderBrush}" BorderThickness="{Binding BorderThick}">
            <Grid Background="Transparent">

                <!--  <Rectangle Fill="{Binding FillBrush,Mode=TwoWay}" />  -->
                <Rectangle x:Name="task" Fill="DeepSkyBlue" Stroke="{Binding FillBrush}" />
                <Border Padding="10">
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontFamily="Segoe UI"
                               FontSize="12"
                               Foreground="White"
                               Text="{Binding DispalyText,
                                              Mode=TwoWay}"
                               TextWrapping="Wrap" />
                </Border>
            </Grid>
        </Border>

    </DataTemplate>

    <DataTemplate x:Key="decisionnodetemplate">
        <Border BorderBrush="{Binding BorderBrush}" BorderThickness="{Binding BorderThick}">
            <Grid Background="Transparent">

                <Path x:Name="decision"
                          Data="M 0,20 L 30 0 L 60,20 L 30,40 Z"
                          Fill="DeepSkyBlue"
                          Stretch="Fill" Stroke="{Binding FillBrush}" />
                <Border Padding="10">
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontFamily="Segoe UI"
                               FontSize="12"
                               Foreground="White"
                               Text="{Binding DispalyText,
                                              Mode=TwoWay}" />
                </Border>

            </Grid>
        </Border>

    </DataTemplate>

    <Style x:Key="nodestyle" TargetType="Path">
        <Setter Property="Fill" Value="DarkBlue" />
        <Setter Property="Stroke" Value="DarkGreen" />
        <Setter Property="StrokeThickness" Value="2" />
        <Setter Property="Stretch" Value="Fill" />
    </Style>

    <Style x:Key="nodestyle1" TargetType="Path">
        <Setter Property="Fill" Value="Brown" />
        <Setter Property="Stroke" Value="YellowGreen" />
        <Setter Property="StrokeThickness" Value="2" />
        <Setter Property="Stretch" Value="Fill" />
