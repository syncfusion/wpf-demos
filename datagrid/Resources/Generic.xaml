<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:local="clr-namespace:syncfusion.datagriddemos.wpf">

    <Style x:Key="ClearButton" TargetType="{x:Type Button}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid Background="Transparent">
                        <Ellipse x:Name="BackgroundEllipse" />
                        <Path
                            x:Name="ButtonPath"
                            Margin="3"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Stretch="Uniform"
                            Stroke="Gray"
                            StrokeThickness="1.5">
                            <Path.Data>
                                <PathGeometry>
                                    <PathGeometry.Figures>
                                        <PathFigure StartPoint="0,0">
                                            <LineSegment Point="50,50" />
                                        </PathFigure>
                                        <PathFigure StartPoint="0,50">
                                            <LineSegment Point="50,0" />
                                        </PathFigure>
                                    </PathGeometry.Figures>
                                </PathGeometry>
                            </Path.Data>
                        </Path>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="BackgroundEllipse" Property="Fill" Value="Red" />
                            <Setter TargetName="ButtonPath" Property="Stroke" Value="#FFf9ebeb" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:FilterStatusBar}">
        <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
        <Setter Property="BorderThickness" Value="1.5,0,1.5,1.5" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="#E0E0E0" />
        <Setter Property="Margin" Value="2.5,-5,2.5,0" />
        <Setter Property="Height" Value="28" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Padding" Value="1" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:FilterStatusBar}">
                    <Border
                        x:Name="border"
                        Grid.Row="1"
                        Height="{TemplateBinding Height}"
                        Margin="{TemplateBinding Margin}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                x:Name="PART_TextBlock"
                                Grid.Column="0"
                                Margin="3,0,0,0"
                                VerticalAlignment="Center"
                                FontFamily="Roboto-Regular"
                                FontSize="14"
                                FontWeight="Normal"
                                Foreground="#333333"
                                SnapsToDevicePixels="True"
                                Text="{TemplateBinding FilterText}"
                                TextTrimming="WordEllipsis"
                                ToolTipService.ShowDuration="90000">
                                <TextBlock.ToolTip>
                                    <ToolTip
                                        x:Name="PART_ToolTip"
                                        MaxWidth="500"
                                        Visibility="Collapsed">
                                        <ToolTip.Content>
                                            <TextBlock
                                                Text="{TemplateBinding FilterText}"
                                                TextTrimming="WordEllipsis"
                                                TextWrapping="Wrap" />
                                        </ToolTip.Content>
                                    </ToolTip>
                                </TextBlock.ToolTip>
                            </TextBlock>
                            <Border
                                x:Name="borders"
                                Grid.Column="1"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Background="White"
                                SnapsToDevicePixels="True">
                                <Button
                                    x:Name="PART_CloseButton"
                                    Width="15"
                                    Height="15"
                                    Margin="0,0,5,0"
                                    Padding="2"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource ClearButton}"
                                    ToolTip="Clear Filter" />
                            </Border>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>