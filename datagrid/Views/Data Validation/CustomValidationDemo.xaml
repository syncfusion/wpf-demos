<democommon:DemoControl
    x:Class="syncfusion.datagriddemos.wpf.CustomValidationDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:interactivity="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:syncfusion.datagriddemos.wpf"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf">

    <democommon:DemoControl.DataContext>
        <local:OrderInfoViewModel />
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Options>
        <StackPanel>
            <TextBlock
                Margin="5"
                FontWeight="Bold"
                Text="Validation Options" />
            <TextBlock
                Margin="5"
                FontSize="12"
                FontWeight="Bold"
                Text="Cell Validation" />
            <TextBlock
                Margin="5"
                FontSize="11"
                Text="Discount field should not exceed 40 percent."
                TextWrapping="Wrap" />
            <TextBlock
                Margin="5"
                FontSize="12"
                FontWeight="Bold"
                Text="Row Validation" />
            <TextBlock
                Margin="5"
                FontSize="11"
                Text="Sum of Expense and Freight should be a minimum of 3000 to be eligible for Discount."
                TextWrapping="Wrap" />
        </StackPanel>
    </democommon:DemoControl.Options>
    <Grid>
        <syncfusion:SfDataGrid
            x:Name="sfDataGrid"
            Margin="5"
            AllowEditing="true"
            AutoGenerateColumns="False"
            ColumnSizer="Star"
            ItemsSource="{Binding OrderList}">
            <syncfusion:SfDataGrid.Columns>
                <syncfusion:GridNumericColumn
                    HeaderText="Order ID"
                    MappingName="OrderID"
                    NumberDecimalDigits="0" />
                <syncfusion:GridTextColumn HeaderText="Ship City" MappingName="ShipCity" />
                <syncfusion:GridTextColumn HeaderText="Ship Country" MappingName="ShipAddress" />
                <syncfusion:GridCurrencyColumn MappingName="Freight" />
                <syncfusion:GridCurrencyColumn MappingName="Expense" />
                <syncfusion:GridPercentColumn MappingName="Discount" />
            </syncfusion:SfDataGrid.Columns>

            <interactivity:Interaction.Behaviors>
                <local:DataGridCellValidationBehavior />
            </interactivity:Interaction.Behaviors>

        </syncfusion:SfDataGrid>
    </Grid>
</democommon:DemoControl>
