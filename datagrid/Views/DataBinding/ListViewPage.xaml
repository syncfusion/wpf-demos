<Page
    x:Class="syncfusion.datagriddemos.wpf.ListViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:syncfusion.datagriddemos.wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sync="clr-namespace:Syncfusion.UI.Xaml.Grid;assembly=Syncfusion.SfGrid.WPF"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:syncfusionskin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    Background="#F5F5F5"
    syncfusionskin:SfSkinManager.VisualStyle="Office2019Colorful"
    Title="ListViewPage"
    mc:Ignorable="d">
    <Page.DataContext>
        <local:DataBindingViewModel />
    </Page.DataContext>
    <Grid>
        <sync:SfDataGrid
            x:Name="syncgrid"
            Margin="5"
            AllowFiltering="True"
            AutoGenerateColumns="False"
            ColumnSizer="Star"
            ItemsSource="{Binding OrdersListDetails}"
            NavigationMode="Row">
            <sync:SfDataGrid.Columns>
                <syncfusion:GridNumericColumn
                    HeaderText="Order ID"
                    MappingName="OrderID"
                    NumberDecimalDigits="0" />
                <syncfusion:GridTextColumn HeaderText="Customer ID" MappingName="CustomerID" />
                <syncfusion:GridTextColumn HeaderText="Ship City" MappingName="ShipCity" />
                <syncfusion:GridTextColumn HeaderText="Ship Country" MappingName="ShipCountry" />
                <syncfusion:GridTextColumn DisplayBinding="{Binding Path=Freight, StringFormat='{}{0:c}'}" TextAlignment="Right" />
            </sync:SfDataGrid.Columns>
        </sync:SfDataGrid>
    </Grid>
</Page>
