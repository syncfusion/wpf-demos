<democommon:DemoControl
    x:Class="syncfusion.datagriddemos.wpf.CustomFilterRowDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:interactivity="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:syncfusion.datagriddemos.wpf"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    DataContext="{DynamicResource viewmodel}">

    <democommon:DemoControl.Resources>
        <local:OrderInfoViewModel x:Key="viewmodel" />
    </democommon:DemoControl.Resources>

    <democommon:DemoControl.Options>
        <StackPanel>
            <TextBlock
                Margin="5"
                FontWeight="Bold"
                Text="Custom Filtering" />
            <StackPanel Margin="5">
                <TextBlock
                    Margin="5"
                    HorizontalAlignment="Left"
                    FontSize="12"
                    FontWeight="Bold"
                    Text="Order ID Column"
                    TextWrapping="Wrap" />
                <TextBlock
                    Margin="5"
                    HorizontalAlignment="Left"
                    FontSize="12"
                    FontWeight="Normal"
                    Text="Filter based on numeric intervals."
                    TextWrapping="Wrap" />
                <TextBlock
                    Margin="5"
                    HorizontalAlignment="Left"
                    FontSize="12"
                    FontWeight="Bold"
                    Text="Customer ID Column"
                    TextWrapping="Wrap" />
                <TextBlock
                    Margin="5"
                    HorizontalAlignment="Left"
                    FontSize="12"
                    FontWeight="Normal"
                    Text="Filter based on range of starts with characters."
                    TextWrapping="Wrap" />
                <TextBlock
                    Margin="5"
                    HorizontalAlignment="Left"
                    FontSize="12"
                    FontWeight="Bold"
                    Text="Ship Name Column"
                    TextWrapping="Wrap" />
                <TextBlock
                    Margin="5"
                    HorizontalAlignment="Left"
                    FontSize="12"
                    FontWeight="Normal"
                    Text="Required filter options are displayed in DropDown."
                    TextWrapping="Wrap" />
                <TextBlock
                    Margin="5"
                    HorizontalAlignment="Left"
                    FontSize="12"
                    FontWeight="Bold"
                    Text="Order Date Column"
                    TextWrapping="Wrap" />
                <TextBlock
                    Margin="5"
                    HorizontalAlignment="Left"
                    FontSize="12"
                    FontWeight="Normal"
                    Text="Filter based on Today, Yesterday, WeekDays, LastWeek, LastMonth and Older."
                    TextWrapping="Wrap" />
                <TextBlock
                    Margin="5"
                    HorizontalAlignment="Left"
                    FontSize="12"
                    FontWeight="Bold"
                    Text="Product Name Column"
                    TextWrapping="Wrap" />
                <TextBlock
                    Margin="5"
                    HorizontalAlignment="Left"
                    FontSize="12"
                    FontWeight="Normal"
                    Text="Filter based on visible Records."
                    TextWrapping="Wrap" />
            </StackPanel>
        </StackPanel>
    </democommon:DemoControl.Options>

    <syncfusion:SfDataGrid
        Name="sfgrid"
        Margin="5"
        AllowFiltering="False"
        AutoGenerateColumns="False"
        ColumnSizer="Star"
        FilterRowPosition="FixedTop"
        ItemsSource="{Binding OrderList}"
        LiveDataUpdateMode="AllowDataShaping"
        NavigationMode="Cell"
        SelectionMode="Extended"
        SelectionUnit="Row"
        ShowRowHeader="True">
        <syncfusion:SfDataGrid.Columns>
            <syncfusion:GridNumericColumn
                FilterRowEditorType="NumericComboBoxExt"
                FilterRowOptionsVisibility="Collapsed"
                HeaderText="Order ID"
                MappingName="OrderID"
                NumberDecimalDigits="0" />
            <syncfusion:GridTextColumn
                FilterRowEditorType="TextComboBoxExt"
                FilterRowOptionsVisibility="Collapsed"
                HeaderText="Customer ID"
                MappingName="CustomerID" />
            <syncfusion:GridTextColumn
                FilterBehavior="StringTyped"
                FilterRowEditorType="TextBox"
                FilterRowOptionsVisibility="Collapsed"
                HeaderText="Product Name"
                ImmediateUpdateColumnFilter="True"
                MappingName="ProductName" />
            <syncfusion:GridTextColumn
                FilterRowEditorType="ExcelFilterComboBox"
                HeaderText="Ship Name"
                MappingName="ShipName" />
            <syncfusion:GridTextColumn
                AllowBlankFilters="False"
                HeaderText="Ship Address"
                ImmediateUpdateColumnFilter="True"
                MappingName="ShipAddress" />
            <syncfusion:GridDateTimeColumn
                FilterRowEditorType="DateTimeComboBoxExt"
                FilterRowOptionsVisibility="Collapsed"
                HeaderText="Order Date"
                MappingName="OrderDate" />
            <syncfusion:GridCheckBoxColumn MappingName="IsShipped" />
        </syncfusion:SfDataGrid.Columns>
        <interactivity:Interaction.Behaviors>
            <local:CustomFilterRowBehavior />
        </interactivity:Interaction.Behaviors>
    </syncfusion:SfDataGrid>
</democommon:DemoControl>
