<syncfusion:ChromelessWindow
    x:Class="syncfusion.datagriddemos.wpf.ColumnChooserDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:interactivity="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:syncfusion.datagriddemos.wpf"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:syncfusionskin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    syncfusionskin:SfSkinManager.VisualStyle="Office2019Colorful"
    Background="#F5F5F5">

    <interactivity:Interaction.Behaviors>
        <local:ColumnChooserBehavior />
    </interactivity:Interaction.Behaviors>

    <syncfusion:ChromelessWindow.DataContext>
        <local:OrderInfoViewModel />
    </syncfusion:ChromelessWindow.DataContext>

    <Grid x:Name="MainGrid">

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>
        <syncfusion:SfDataGrid
            x:Name="dataGrid"
            Margin="5"
            AllowDraggingColumns="True"
            AutoGenerateColumns="False"
            ColumnSizer="Star"
            ItemsSource="{Binding OrderList}"
            NavigationMode="Row"
            ShowGroupDropArea="True">

            <syncfusion:SfDataGrid.Columns>
                <syncfusion:GridNumericColumn
                    HeaderText="Order ID"
                    MappingName="OrderID"
                    NumberDecimalDigits="0" />
                <syncfusion:GridTextColumn
                    AllowSorting="True"
                    HeaderText="Customer ID"
                    IsHidden="True"
                    MappingName="CustomerID" />

                <syncfusion:GridDateTimeColumn
                    AllowSorting="True"
                    HeaderText="Order Date"
                    IsHidden="True"
                    MappingName="OrderDate"
                    TextAlignment="Right" />

                <syncfusion:GridTextColumn HeaderText="Ship Name" MappingName="ShipName" />

                <syncfusion:GridDateTimeColumn
                    HeaderText="Shipped Date"
                    MappingName="ShippedDate"
                    TextAlignment="Right" />

                <syncfusion:GridTextColumn HeaderText="Ship Country" MappingName="ShipAddress" />

                <syncfusion:GridTextColumn
                    DisplayBinding="{Binding Path=Freight, StringFormat='{}{0:C}'}"
                    HeaderText="Freight"
                    TextAlignment="Right" />

                <syncfusion:GridDateTimeColumn
                    HeaderText="Order Date"
                    MappingName="OrderDate"
                    TextAlignment="Right" />

                <syncfusion:GridCheckBoxColumn HeaderText="Is Shipped" MappingName="IsShipped" />

            </syncfusion:SfDataGrid.Columns>

        </syncfusion:SfDataGrid>
        <Grid Grid.Column="1">
            <StackPanel>
                <TextBlock Margin="5" Text="Options" />
                <StackPanel>
                    <ToggleButton
                        x:Name="showColumnChooser"
                        Width="150"
                        Height="25"
                        Margin="5"
                        HorizontalAlignment="Left"
                        Command="{Binding ColumnChooserCommand}"
                        CommandParameter="ShowColumnChooser"
                        Content="ShowColumnChooser"
                        IsChecked="{Binding ShowColumnChooser}" />
                </StackPanel>
                <TextBlock
                    Margin="5"
                    FontWeight="Bold"
                    Text="Column Chooser Options" />
                <StackPanel>
                    <RadioButton
                        x:Name="DefaultChooser"
                        Margin="5"
                        Command="{Binding ColumnChooserCommand}"
                        Content="Default"
                        GroupName="ColumnChoosers"
                        IsChecked="{Binding UseDefaultColumnChooser}" />
                    <RadioButton
                        x:Name="CustomChooser"
                        Margin="5"
                        Command="{Binding ColumnChooserCommand}"
                        Content="Custom"
                        GroupName="ColumnChoosers"
                        IsChecked="{Binding UseCustomColumnChooser}" />
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</syncfusion:ChromelessWindow>