<democommon:DemoControl
    x:Class="syncfusion.datagriddemos.wpf.DragAndDropDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.datagriddemos.wpf"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf">

    <democommon:DemoControl.DataContext>
        <local:OrderInfoViewModel />
    </democommon:DemoControl.DataContext>

    <Grid>
        <syncfusion:SfDataGrid
            x:Name="sfDataGrid"
            Margin="5"
            AllowDraggingRows="True"
            AllowDrop="True"
            AllowGrouping="True"
            AllowSorting="True"
            AutoGenerateColumns="False"
            ColumnSizer="Star"
            ItemsSource="{Binding OrderList}"
            NavigationMode="Cell"
            RowDropIndicatorMode="Line"
            RowHeight="35"
            ShowGroupDropArea="True"
            ShowRowHeader="True">
            <syncfusion:SfDataGrid.Columns>
                <syncfusion:GridNumericColumn
                    HeaderText="Order ID"
                    MappingName="OrderID"
                    NumberDecimalDigits="0" />
                <syncfusion:GridTextColumn HeaderText="Customer ID" MappingName="CustomerID" />
                <syncfusion:GridTextColumn HeaderText="Product Name" MappingName="ProductName" />
                <syncfusion:GridTextColumn HeaderText="Ship City" MappingName="ShipCity" />
                <syncfusion:GridTextColumn HeaderText="Ship Address" MappingName="ShipAddress" />
                <syncfusion:GridCurrencyColumn
                    HeaderText="Unit Price"
                    MappingName="UnitPrice"
                    TextAlignment="Right" />
                <syncfusion:GridCheckBoxColumn HeaderText="Closed" MappingName="IsShipped" />
            </syncfusion:SfDataGrid.Columns>
        </syncfusion:SfDataGrid>
    </Grid>
</democommon:DemoControl>
