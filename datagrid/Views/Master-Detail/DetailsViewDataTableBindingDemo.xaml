<democommon:DemoControl
    x:Class="syncfusion.datagriddemos.wpf.DetailsViewDataTableBindingDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:interactivity="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:syncfusion.datagriddemos.wpf"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf">

    <democommon:DemoControl.DataContext>
        <local:DataTableViewModel />
    </democommon:DemoControl.DataContext>

    <Grid>
        <syncfusion:SfDataGrid
            Name="datagrid"
            Margin="5"
            AutoGenerateColumns="False"
            AutoGenerateRelations="True"
            ColumnSizer="Auto"
            HideEmptyGridViewDefinition="True"
            ItemsSource="{Binding DataCollection}"
            NavigationMode="Cell"
            ShowRowHeader="True">
            <interactivity:Interaction.Behaviors>
                <local:DataGridDetailsViewBehavior />
            </interactivity:Interaction.Behaviors>

            <syncfusion:SfDataGrid.Columns>
                <syncfusion:GridTextColumn
                    HeaderText="Supplier ID"
                    MappingName="SupplierID"
                    TextAlignment="Right" />
                <syncfusion:GridTextColumn
                    HeaderText="Contact Name"
                    MappingName="ContactName"
                    TextAlignment="Center" />
                <syncfusion:GridTextColumn
                    HeaderText="Contact Title"
                    MappingName="ContactTitle"
                    TextAlignment="Center" />
                <syncfusion:GridTextColumn
                    HeaderText="City"
                    MappingName="City"
                    TextAlignment="Center" />

                <syncfusion:GridTextColumn
                    HeaderText="Postal Code"
                    MappingName="PostalCode"
                    TextAlignment="Center" />
                <syncfusion:GridTextColumn
                    HeaderText="Country"
                    MappingName="Country"
                    TextAlignment="Center" />
                <syncfusion:GridMaskColumn HeaderText="Phone" MappingName="Phone" />
            </syncfusion:SfDataGrid.Columns>
        </syncfusion:SfDataGrid>
    </Grid>
</democommon:DemoControl>
