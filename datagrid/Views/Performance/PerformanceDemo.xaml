<democommon:DemoControl
    x:Class="syncfusion.datagriddemos.wpf.PerformanceDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:interactivity="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:syncfusion.datagriddemos.wpf"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    >

    <democommon:DemoControl.DataContext>
        <local:StocksViewModel />
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Resources>
        <local:StockChangeConverter x:Key="stockChangeConverter" />
        <local:ChangeForegroundConverter x:Key="changeForegroundConverter" />
    </democommon:DemoControl.Resources>

    <democommon:DemoControl.Options>
        <StackPanel>
            <TextBlock
                Margin="5"
                FontSize="12"
                FontWeight="Bold"
                Text="Timer Frequency:" />
            <Slider
                x:Name="trackTimer"
                Margin="5"
                Maximum="1000"
                Minimum="100"
                TickFrequency="1"
                TickPlacement="None"
                Value="{Binding TimeSpanValue, Mode=TwoWay}" />

            <TextBlock
                Margin="5"
                FontSize="12"
                FontWeight="Bold"
                Text="Start / Stop Timer:" />

            <Button
                x:Name="btnTimer"
                Width="160"
                Height="25"
                Margin="5"
                HorizontalAlignment="Left"
                Command="{Binding ButtonClickCommand}"
                Content="{Binding ButtonContent}" />
        </StackPanel>
    </democommon:DemoControl.Options>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Margin="10" Orientation="Horizontal">
            <StackPanel.Resources>
                <Style x:Key="textBoxStyle" TargetType="TextBlock">
                    <Setter Property="FontSize" Value="16" />
                    <Setter Property="Margin" Value="5,0,10,5" />
                    <Setter Property="Foreground" Value="#FF333333" />
                    <Setter Property="FontFamily" Value="Segoe UI" />
                    <Setter Property="FontWeight" Value="Normal" />
                </Style>
            </StackPanel.Resources>
            <TextBlock Margin="10,0,0,0" Text="Timer Frequency : " />
            <TextBlock
                Margin="5,0,0,0"
                FontWeight="SemiBold"
                Foreground="#FF191717">
                <Run Text="{Binding Value, ElementName=trackTimer}" />
                <Run Text="ms" />
            </TextBlock>
            <TextBlock Margin="10,0,0,0" Text="No of Updates : " />
            <TextBlock
                Margin="5,0,0,0"
                FontWeight="SemiBold"
                Foreground="#FF191717"
                Text="10000" />
        </StackPanel>

        <syncfusion:SfDataGrid
            x:Name="datagrid"
            Grid.Row="1"
            Margin="5"
            AllowSorting="False"
            AutoGenerateColumns="False"
            ColumnSizer="Star"
            ItemsSource="{Binding Stocks}"
            NavigationMode="Row">
            <syncfusion:SfDataGrid.Columns>
                <syncfusion:GridTextColumn MappingName="Symbol" TextAlignment="Left" />
                <syncfusion:GridTextColumn MappingName="Account" />
                <syncfusion:GridTextColumn
                    HeaderText="Last Trade"
                    MappingName="LastTrade"
                    TextAlignment="Right" />
                <syncfusion:GridTemplateColumn MappingName="Change">
                    <syncfusion:GridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    x:Name="changeValue"
                                    Grid.Column="1"
                                    HorizontalAlignment="Center"
                                    FontSize="14"
                                    Foreground="{Binding Change, Converter={StaticResource changeForegroundConverter}, ConverterParameter=performancedemo}"
                                    Text="{Binding Change}" />

                                <Path
                                    Width="12"
                                    Height="12"
                                    Margin="0,0,0,0"
                                    Data="{Binding Change, Converter={StaticResource stockChangeConverter}}"
                                    Fill="{Binding Foreground, ElementName=changeValue}"
                                    Stretch="Uniform">
                                    <Path.RenderTransform>
                                        <TransformGroup>
                                            <TransformGroup.Children>
                                                <RotateTransform Angle="0" />
                                                <ScaleTransform ScaleX="1" ScaleY="1" />
                                            </TransformGroup.Children>
                                        </TransformGroup>
                                    </Path.RenderTransform>
                                </Path>
                            </Grid>
                        </DataTemplate>
                    </syncfusion:GridTemplateColumn.CellTemplate>
                </syncfusion:GridTemplateColumn>
                <syncfusion:GridTextColumn
                    HeaderText="Previous Close"
                    MappingName="PreviousClose"
                    TextAlignment="Right" />
                <syncfusion:GridTextColumn MappingName="Open" TextAlignment="Right" />
            </syncfusion:SfDataGrid.Columns>
            <interactivity:Interaction.Behaviors>
                <local:DataGridRealTimeUpdateBehavior />
            </interactivity:Interaction.Behaviors>
        </syncfusion:SfDataGrid>
    </Grid>
</democommon:DemoControl>
