    <democommon:DemoControl.DataContext>
        <viewmodel:AnnotationsViewModel/>
    </democommon:DemoControl.DataContext>
    <Grid x:Name="Maingrid">
        <syncfusion:SfDiagram x:Name="Diagram" 
                              SelectedItems="{Binding SelectedItems}" 
                              Nodes="{Binding Nodes}"
                              Connectors="{Binding Connectors}"
                              ItemSelectedCommand="{Binding ItemSelectedCommand}"
                              ViewPortChangedCommand="{Binding ViewPortChangedCommand}"
                              PortVisibility="{Binding PortVisibility}">
            
            <syncfusion:SfDiagram.HorizontalRuler>
                <syncfusion:Ruler Orientation="Horizontal"/>
            </syncfusion:SfDiagram.HorizontalRuler>

            <syncfusion:SfDiagram.VerticalRuler>
                <syncfusion:Ruler Orientation="Vertical"/>
            </syncfusion:SfDiagram.VerticalRuler>

            <!--SnapConstraints used to control the Visibilty of Gridlines and enable/disable Snapping.-->
            <syncfusion:SfDiagram.SnapSettings>
                <syncfusion:SnapSettings SnapConstraints="All" 
                                         SnapToObject="All"/>
            </syncfusion:SfDiagram.SnapSettings>
        </syncfusion:SfDiagram>
    </Grid>
    <democommon:DemoControl.OptionsTitle>
        Properties
    </democommon:DemoControl.OptionsTitle>
    <democommon:DemoControl.Options>
        <StackPanel  IsEnabled="False" x:Name="propertyPanel">
            
            <TextBlock Text="Alignment" Margin="20,0,0,10" FontWeight="Bold" FontSize="11pt"/>
            <StackPanel Margin="20,0,0,0" Orientation="Horizontal">
                <Button x:Name="Center" Command="{Binding SelectShapeCommand}" CommandParameter="{Binding ElementName=Center}" Style="{StaticResource AnnotationsButtonStyle}" >
                    <Image Source="/syncfusion.diagramdemos.wpf;component/Assets/Diagram/Center.png"></Image>
                </Button>
                <TextBlock Width="10"/>
                <Button x:Name="TopLeft" Command="{Binding SelectShapeCommand}" CommandParameter="{Binding ElementName=TopLeft}" Style="{StaticResource AnnotationsButtonStyle}"   >
                    <Image Source="/syncfusion.diagramdemos.wpf;component/Assets/Diagram/LeftText.png"></Image>
                </Button>
                <TextBlock Width="10"/>
                <Button x:Name="TopRight" Command="{Binding SelectShapeCommand}" CommandParameter="{Binding ElementName=TopRight}" Style="{StaticResource AnnotationsButtonStyle}" >
                    <Image Source="/syncfusion.diagramdemos.wpf;component/Assets/Diagram/RightText.png"></Image>
                </Button>
            </StackPanel>
            <TextBlock Height="5"/>
            <StackPanel Margin="20,0,0,0" Orientation="Horizontal">
                <Button x:Name="BottomLeft" Command="{Binding SelectShapeCommand}" CommandParameter="{Binding ElementName=BottomLeft}"  Style="{StaticResource AnnotationsButtonStyle}" >
                    <Image Source="/syncfusion.diagramdemos.wpf;component/Assets/Diagram/BottomLeft.png"></Image>
                </Button>
                <TextBlock Width="10"/>
                <Button x:Name="BottomRight" Command="{Binding SelectShapeCommand}" CommandParameter="{Binding ElementName=BottomRight}" Style="{StaticResource AnnotationsButtonStyle}"   >
                    <Image Source="/syncfusion.diagramdemos.wpf;component/Assets/Diagram/BottomRight.png"></Image>
                </Button>
                <TextBlock Width="10"/>
                <Button x:Name="MarginText" Command="{Binding SelectShapeCommand}" CommandParameter="{Binding ElementName=MarginText}"  Style="{StaticResource AnnotationsButtonStyle}" >
                    <Image Source="/syncfusion.diagramdemos.wpf;component/Assets/Diagram/MarginText.png"></Image>
                </Button>
            </StackPanel>
            <TextBlock Height="5"/>
            <StackPanel Margin="20,0,0,0" Orientation="Horizontal">
                <Button x:Name="SourceText" Command="{Binding SelectShapeCommand}" CommandParameter="{Binding ElementName=SourceText}"  Style="{StaticResource AnnotationsButtonStyle}" >
                    <Image Source="/syncfusion.diagramdemos.wpf;component/Assets/Diagram/SourceText.png"></Image>
                </Button>
                <TextBlock Width="10"/>
                <Button x:Name="TargetText" Command="{Binding SelectShapeCommand}" CommandParameter="{Binding ElementName=TargetText}" Style="{StaticResource AnnotationsButtonStyle}"   >
                    <Image Source="/syncfusion.diagramdemos.wpf;component/Assets/Diagram/TargetText.png"></Image>
                </Button>
                <TextBlock Width="10"/>
                <Button x:Name="AboveCenter" Command="{Binding SelectShapeCommand}" CommandParameter="{Binding ElementName=AboveCenter}"  Style="{StaticResource AnnotationsButtonStyle}" >
                    <Image Source="/syncfusion.diagramdemos.wpf;component/Assets/Diagram/AboveCenter.png"></Image>
                </Button>
            </StackPanel>
            <TextBlock Height="5"/>
            <StackPanel Margin="20,0,0,0" Orientation="Horizontal">
                <Button x:Name="BelowCenter" Command="{Binding SelectShapeCommand}" CommandParameter="{Binding ElementName=BelowCenter}"  Style="{StaticResource AnnotationsButtonStyle}" >
                    <Image Source="/syncfusion.diagramdemos.wpf;component/Assets/Diagram/BelowCenter.png"></Image>
                </Button>
                <TextBlock Width="10"/>
                <Button x:Name="CenterText" Command="{Binding SelectShapeCommand}" CommandParameter="{Binding ElementName=CenterText}" Style="{StaticResource AnnotationsButtonStyle}"   >
                    <Image Source="/syncfusion.diagramdemos.wpf;component/Assets/Diagram/CenterText.png"></Image>
                </Button>
            </StackPanel>
            <TextBlock Height="15"/>
            <TextBlock Text="Appearance" Margin="20,0,0,0" FontWeight="Bold" FontSize="11pt"/>
            <TextBlock Height="10"/>
            <StackPanel Orientation="Horizontal">
                <syncfusion:RibbonButton SmallIcon="{StaticResource Bold}" 
                                         x:Name="bold" Margin="20,0,0,0"
                                         Width="25" Height="25" 
                                         Command="{Binding SelectFontStyleCommand}" 
                                         CommandParameter="{Binding ElementName=bold}" />
                <TextBlock Width="10"/>
                <syncfusion:RibbonButton x:Name="italic" SmallIcon="{StaticResource Italics}"  
                                         Width="25" Height="25" 
                                         Command="{Binding SelectFontStyleCommand}" 
                                         CommandParameter="{Binding ElementName=italic}"/>
                <TextBlock Width="10"/>
                <syncfusion:RibbonButton SmallIcon="{StaticResource Underline}" x:Name="underline" 
                                         Width="25" Height="25" 
                                         Command="{Binding SelectFontStyleCommand}" 
                                         CommandParameter="{Binding ElementName=underline}"/>
                <TextBlock Width="10"/>
                <syncfusion:RibbonButton x:Name="Strike" SmallIcon="{StaticResource Strikethrough}"
                                         Width="25" Height="25" 
                                         Command="{Binding SelectFontStyleCommand}" 
                                         CommandParameter="{Binding ElementName=Strike}"/>
                <TextBlock Width="10"/>
                <syncfusion:ColorPickerPalette x:Name="colorPicker" Width="70" Height="25" 
                                               HorizontalAlignment="Left" SelectedBrush="{Binding  Path=Textcolor, Mode=TwoWay}"/>
                <TextBlock Width="10"/>
                <syncfusion:UpDown TextAlignment="Left" Height="25" Width="70" 
                                   Value="{Binding ElementName=Diagram, Path=DataContext.TextSize , Mode=TwoWay}"
                                   MinValue="1" ApplyZeroColor="False"/>
            </StackPanel>
            <TextBlock Height="10"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>

                <Label Content="Font Family" Margin="15,0,0,0"  Grid.Row="0" Grid.Column="0" FontSize="14" />
                <Label Content="Text Wrapping" Margin="15,0,0,0"  Grid.Row="1" Grid.Column="0" FontSize="14" />
                <Label Content="Text Trimming" Margin="15,0,0,0"  Grid.Row="2" Grid.Column="0" FontSize="14" />

                <ComboBox ItemsSource="{Binding Source={x:Static Fonts.SystemFontFamilies}}" SelectedItem="{Binding FontFamilyValue}"
                          Margin="0,2,0,10" Grid.Row="0" Grid.Column="1"/>
                <ComboBox ItemsSource="{democommon:EnumValues Type=sys:TextWrapping}" SelectedItem="{Binding TextWrapValue}" 
                          Margin="0,2,0,10" Grid.Row="1" Grid.Column="1">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource EnumDisplayNameConverter}}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <ComboBox ItemsSource="{democommon:EnumValues Type=sys:TextTrimming}" ToolTip="How text should be trimmed when text overflows the shape" SelectedItem="{Binding TextTrimmingValue}"  
                          Margin="0,2,0,10" Grid.Row="2" Grid.Column="1">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource EnumDisplayNameConverter}}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </Grid>
            <TextBlock Height="5"/>
            <TextBlock Text="Behaviour" Margin="20,0,0,0" FontWeight="Bold" FontSize="11pt"/>
            <CheckBox x:Name="viewMode" Margin="20,10,0,0" FontSize="11pt" 
                      Command="{Binding ViewModeCommand}" ToolTip="To enable or disable the annotation editing mode"
                      HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Content="Non-edit Mode"
                      CommandParameter="{Binding Path=IsChecked, RelativeSource={RelativeSource Self}}" IsChecked="False"/>
            <CheckBox x:Name="labelInteraction" Margin="20,10,0,0" FontSize="11pt" 
                      Command="{Binding LabelInteractionCommand}" ToolTip="To enable or disable interaction of annotation"
                      HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Content="Label Interaction"
                      CommandParameter="{Binding Path=IsChecked, RelativeSource={RelativeSource Self}}" IsChecked="False"/>
        </StackPanel>
    </democommon:DemoControl.Options>
</democommon:DemoControl>
