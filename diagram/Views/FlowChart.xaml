<democommon:DemoControl
    x:Class="syncfusion.diagramdemo.wpf.Views.FlowChart"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:syncfusion.diagramdemo.wpf.Views"
    mc:Ignorable="d" 
    xmlns:viewmodel="clr-namespace:syncfusion.diagramdemo.wpf.ViewModel"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"  
    d:DesignHeight="450" d:DesignWidth="800" OptionsSize="350">
    <democommon:DemoControl.Resources>

        <DataTemplate x:Key="ConnectorAnnotationFlowChartTemplate">
            <Border Background="White">
                <TextBlock Text="{Binding Path=Content, Mode=OneWay}" Foreground="Black"                  
                       TextWrapping="{Binding Path=WrapText, Mode=OneWay}"
                       TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center">
                </TextBlock>
            </Border>
        </DataTemplate>

        <Style TargetType="syncfusion:Node">
            <Setter Property="ShapeStyle">
                <Setter.Value>
                    <Style TargetType="Path">
                        <Setter Property="Stretch" Value="Fill"  />
                        <Setter Property="Fill" Value="{Binding Content._Color}" />
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="syncfusion:Connector">
            <Setter Property="TargetDecoratorStyle">
                <Setter.Value>
                    <Style TargetType="Path">
                        <Setter Property="Fill" Value="Black"></Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="syncfusion:AnnotationEditor">
            <Setter Property="Foreground" Value="White"/>
        </Style>

    </democommon:DemoControl.Resources>
    <Grid>
        <!--Initialize Diagram-->
        <syncfusion:SfDiagram x:Name="sfdiagram"  
                                  Tool="ZoomPan"
                                  ItemAddedCommand="{Binding ItemAddedCommand}"
                                  DefaultConnectorType="{Binding DefaultConnectorType}"
                                  Nodes="{Binding Nodes}"
                                  Connectors="{Binding Connectors}"                                  
                                  Constraints="{Binding Constraints}"                                
                                  Menu="{Binding Menu}"
                                  DataSourceSettings="{Binding DataSourceSettings}"                                 
                                  LayoutManager="{Binding LayoutManager}">
            <syncfusion:SfDiagram.SnapSettings>
                <syncfusion:SnapSettings SnapToObject="All" SnapConstraints="All"/>
            </syncfusion:SfDiagram.SnapSettings>
            <syncfusion:SfDiagram.HorizontalRuler>
                <syncfusion:Ruler Orientation="Horizontal"/>
            </syncfusion:SfDiagram.HorizontalRuler>
            <syncfusion:SfDiagram.VerticalRuler>
                <syncfusion:Ruler Orientation="Vertical"/>
            </syncfusion:SfDiagram.VerticalRuler>
        </syncfusion:SfDiagram>
    </Grid>
    <democommon:DemoControl.Options>
        <StackPanel Background="Transparent">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="170"/>
                    <ColumnDefinition Width="150"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!--Properties Panel Labels-->

                <Label Margin="15,5,0,0" Content="Orientation" Grid.Row="0" Grid.Column="0" Background="Transparent" BorderBrush="Transparent"/>
                <Label Margin="15,5,0,0" Content="Yes branch direction" Grid.Row="1" Grid.Column="0" Background="Transparent" />
                <Label Margin="15,5,0,0" Content="No branch direction" Grid.Row="2" Grid.Column="0" Background="Transparent" />
                <Label Margin="15,5,0,0" Content="Horizontal spacing" Grid.Row="3" Grid.Column="0" Background="Transparent" />
                <Label Margin="15,5,0,0" Content="Vertical spacing" Grid.Row="4" Grid.Column="0" Background="Transparent" />



                <ComboBox Margin="10,10,0,10" Grid.Row="0" Grid.Column="1" SelectedItem="{Binding OrientationDirection, Mode=TwoWay}" ItemsSource="{Binding Orientations}"/>
                <ComboBox Margin="10,10,0,10" Grid.Row="1" Grid.Column="1" SelectedItem="{Binding YesDirection, Mode=TwoWay}" ItemsSource="{Binding YesDirections}"/>
                <ComboBox Margin="10,10,0,10" Grid.Row="2" Grid.Column="1" SelectedItem="{Binding NoDirection, Mode=TwoWay}" ItemsSource="{Binding NoDirections}"/>
                <syncfusion:UpDown MinValue="20" Margin="10,10,0,10" Grid.Row="3" Grid.Column="1"
                                          Value="{Binding ElementName=sfdiagram, Path=DataContext.LayoutManager.Layout.HorizontalSpacing, Mode=TwoWay}" />
                <syncfusion:UpDown MinValue="20" Margin="10,10,0,10" Grid.Row="4" Grid.Column="1" 
                                          Value="{Binding ElementName=sfdiagram, Path=DataContext.LayoutManager.Layout.VerticalSpacing, Mode=TwoWay}" />

            </Grid>
        </StackPanel>
    </democommon:DemoControl.Options>
</democommon:DemoControl>
