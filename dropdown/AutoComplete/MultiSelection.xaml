<democommon:DemoControl
    x:Class="syncfusion.dropdowndemos.wpf.MultiSelectionDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Syncfusion="clr-namespace:Syncfusion.Windows.Controls.Input;assembly=Syncfusion.SfInput.Wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:interaction="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:syncfusion.dropdowndemos.wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <democommon:DemoControl.DataContext>
        <local:MultiSelectViewModel />
    </democommon:DemoControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Height="50" Background="Transparent">
            <Label
                Margin="10,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Left"
                Content="Email - Compose"
                FontSize="20" />
        </Grid>

        <Grid Grid.Row="1" Margin="10,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="To"
                FontSize="20" />
            <Label
                Grid.Row="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Cc"
                FontSize="20" />
            <Label
                Grid.Row="2"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Bcc"
                FontSize="20" />
            <Syncfusion:SfTextBoxExt
                x:Name="autoComplete"
                Grid.Column="1"
                Margin="10"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                AutoCompleteMode="Suggest"
                AutoCompleteSource="{Binding ContactData}"
                EnableAutoSize="True"
                ImageMemberPath="Image"
                MultiSelectMode="Token"
                SearchItemPath="Name"
                SelectedItems="{Binding ToSelectedItem, Mode=TwoWay}"
                Text="{Binding ToText, Mode=TwoWay}"
                TokensWrapMode="Wrap">

                <Syncfusion:SfTextBoxExt.AutoCompleteItemTemplate>
                    <DataTemplate>
                        <StackPanel Height="40" Orientation="Horizontal">
                            <Image
                                Width="35"
                                Height="35"
                                Margin="2"
                                Source="{Binding Image}"
                                Stretch="Uniform" />
                            <StackPanel Margin="2" Orientation="Vertical">
                                <TextBlock
                                    Margin="4,2,4,0"
                                    FontSize="12"
                                    Text="{Binding Name}" />
                                <TextBlock
                                    Margin="4,1,2,2"
                                    FontSize="10"
                                    Text="{Binding Email}" />
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </Syncfusion:SfTextBoxExt.AutoCompleteItemTemplate>
                <Syncfusion:SfTextBoxExt.NoResultsFoundTemplate>
                    <DataTemplate>
                        <Label
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Content="No Results Found" />
                    </DataTemplate>
                </Syncfusion:SfTextBoxExt.NoResultsFoundTemplate>
            </Syncfusion:SfTextBoxExt>
            <Syncfusion:SfTextBoxExt
                x:Name="autoComplete1"
                Grid.Row="1"
                Grid.Column="1"
                Height="24"
                Margin="10"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                AutoCompleteMode="Suggest"
                AutoCompleteSource="{Binding ContactData}"
                ImageMemberPath="Image"
                MultiSelectMode="Token"
                SearchItemPath="Name"
                SelectedItems="{Binding CcSelectedItem, Mode=TwoWay}"
                Text="{Binding CcText, Mode=TwoWay}"
                TokensWrapMode="Wrap">
                <Syncfusion:SfTextBoxExt.AutoCompleteItemTemplate>
                    <DataTemplate>
                        <StackPanel Height="40" Orientation="Horizontal">
                            <Image
                                Width="35"
                                Height="35"
                                Margin="2"
                                Source="{Binding Image}"
                                Stretch="Uniform" />
                            <StackPanel Margin="2" Orientation="Vertical">
                                <TextBlock
                                    Margin="4,2,4,0"
                                    FontSize="12"
                                    Text="{Binding Name}" />
                                <TextBlock
                                    Margin="4,1,2,2"
                                    FontSize="10"
                                    Text="{Binding Email}" />
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </Syncfusion:SfTextBoxExt.AutoCompleteItemTemplate>
                <Syncfusion:SfTextBoxExt.NoResultsFoundTemplate>
                    <DataTemplate>
                        <Label
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Content="No Results Found" />
                    </DataTemplate>
                </Syncfusion:SfTextBoxExt.NoResultsFoundTemplate>
            </Syncfusion:SfTextBoxExt>

            <Syncfusion:SfTextBoxExt
                x:Name="autoComplete2"
                Grid.Row="2"
                Grid.Column="1"
                Height="24"
                Margin="10"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                AutoCompleteMode="Suggest"
                AutoCompleteSource="{Binding ContactData}"
                ImageMemberPath="Image"
                MultiSelectMode="Token"
                SearchItemPath="Name"
                SelectedItems="{Binding BccSelectedItem, Mode=TwoWay}"
                Text="{Binding BccText, Mode=TwoWay}"
                TokensWrapMode="Wrap">
                <Syncfusion:SfTextBoxExt.AutoCompleteItemTemplate>
                    <DataTemplate>
                        <StackPanel Height="40" Orientation="Horizontal">
                            <Image
                                Width="35"
                                Height="35"
                                Margin="2"
                                Source="{Binding Image}"
                                Stretch="Uniform" />
                            <StackPanel Margin="2" Orientation="Vertical">
                                <TextBlock
                                    Margin="4,2,4,0"
                                    FontSize="12"
                                    Text="{Binding Name}" />
                                <TextBlock
                                    Margin="4,1,2,2"
                                    FontSize="10"
                                    Text="{Binding Email}" />
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </Syncfusion:SfTextBoxExt.AutoCompleteItemTemplate>
                <Syncfusion:SfTextBoxExt.NoResultsFoundTemplate>
                    <DataTemplate>
                        <Label
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Content="No Results Found" />
                    </DataTemplate>
                </Syncfusion:SfTextBoxExt.NoResultsFoundTemplate>
            </Syncfusion:SfTextBoxExt>

        </Grid>
        <Grid Grid.Row="2" Margin="10,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <Grid Height="30" Margin="10,0,10,0">
                <Label
                    x:Name="label"
                    Margin="5,2"
                    VerticalAlignment="Center"
                    Content="Add a subject"
                    Visibility="{Binding LabelVisibility}" />
                <TextBox
                    Name="subjectEntry"
                    Height="30"
                    VerticalAlignment="Center"
                    VerticalContentAlignment="Center"
                    Background="Transparent"
                    FontSize="12">
                    <interaction:Interaction.Triggers>
                        <interaction:EventTrigger EventName="TextChanged">
                            <interaction:InvokeCommandAction Command="{Binding EntryTextChanged}" CommandParameter="{Binding ElementName=subjectEntry}" />
                        </interaction:EventTrigger>
                    </interaction:Interaction.Triggers>
                </TextBox>
            </Grid>
            <TextBox
                Grid.Row="1"
                Margin="10"
                VerticalContentAlignment="Top"
                AcceptsReturn="True"
                FontSize="12"
                Text="*Some Text*"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto" />
            <Button
                Grid.Row="2"
                Width="80"
                Height="25"
                Margin="10,0,10,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Command="{Binding ClickCommand}"
                Content="Send"
                FontSize="12" />
        </Grid>
    </Grid>

</democommon:DemoControl>
