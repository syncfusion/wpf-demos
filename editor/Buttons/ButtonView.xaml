<democommon:DemoControl
    x:Class="syncfusion.editordemos.wpf.ButtonView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:interactivity="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:skinManager="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:viewModel="clr-namespace:syncfusion.editordemos.wpf">
    <democommon:DemoControl.DataContext>
        <viewModel:ButtonViewModel />
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/syncfusion.editordemos.wpf;component/Assets/Buttons/PathIcon.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        <DataTemplate x:Key="DefaultTemplate">
            <StackPanel Orientation="Horizontal">
                    <ContentPresenter
                    Width="20"
                    Height="20"
                    ContentTemplate="{Binding ImageTemplate}" Content="{Binding }" />
                    <TextBlock Margin="5,5" Text="{Binding Path=Name}" />
                </StackPanel>
        </DataTemplate>
        </ResourceDictionary>

    </democommon:DemoControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height=".5*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock
            Grid.Row="2"
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            TextAlignment="Center">
            <Span FontWeight="SemiBold">Button</Span>
        </TextBlock>
        <TextBlock
            Grid.Row="2"
            Grid.Column="2"
            VerticalAlignment="Center"
            TextAlignment="Center">
            <Span FontWeight="SemiBold">DropDownButton</Span>
        </TextBlock>
        <TextBlock
            Grid.Row="2"
            Grid.Column="3"
            VerticalAlignment="Center"
            TextAlignment="Center">
            <Span FontWeight="SemiBold">SplitButton</Span>
        </TextBlock>
        <TextBlock
            Grid.Row="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            TextAlignment="Left">
            <Span FontWeight="SemiBold">SizeMode :</Span>
            Small</TextBlock>
        <syncfusion:ButtonAdv
            Name="smallButtonAdv"
            Grid.Row="3"
            Grid.Column="1"
            Height="25" Width="25"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            IconWidth="18" IconHeight="18"
            Command="{Binding ButtonCommand}"
            Label="Button" IconTemplate="{StaticResource UserSmall}"
            SizeMode="Small"
            Tag="Small" />
        <syncfusion:DropDownButtonAdv
            x:Name="dropDownButtonAdv"
            Grid.Row="3"
            Grid.Column="2"
            Height="25" Width="35"
            Label="Shapes"
            IconTemplate="{StaticResource ShapesSmall}"
            SizeMode="Small">
            <ListBox
                Name="smallDropDown"
                BorderThickness="0"
                ItemTemplate="{StaticResource DefaultTemplate}"
                ItemsSource="{Binding Path=ShapeDetails}">
                <interactivity:Interaction.Triggers>
                    <interactivity:EventTrigger EventName="SelectionChanged">
                        <interactivity:InvokeCommandAction Command="{Binding Path=DropDownCommand}" />
                    </interactivity:EventTrigger>
                </interactivity:Interaction.Triggers>
            </ListBox>
        </syncfusion:DropDownButtonAdv>
        <syncfusion:SplitButtonAdv
            x:Name="splitButtonAdv"
            Grid.Row="3"
            Grid.Column="3"
            Height="25" Width="35"
            Command="{Binding ButtonCommand}"
            Label="Colors"
            IconTemplate="{StaticResource PaletteSmall}"
            SizeMode="Small">
            <ListBox
                Name="smallSplit"
                BorderThickness="0"
                ItemTemplate="{StaticResource DefaultTemplate}"
                ItemsSource="{Binding Path=ColorDetails}">
                <interactivity:Interaction.Triggers>
                    <interactivity:EventTrigger EventName="SelectionChanged">
                        <interactivity:InvokeCommandAction Command="{Binding Path=DropDownCommand}" />
                    </interactivity:EventTrigger>
                </interactivity:Interaction.Triggers>
            </ListBox>
        </syncfusion:SplitButtonAdv>
        <TextBlock
            Grid.Row="4"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"><Span FontWeight="SemiBold">SizeMode :</Span>
            Normal</TextBlock>
        <syncfusion:ButtonAdv
            Name="normalButtonAdv"
            Grid.Row="4"
            Grid.Column="1"
            Height="25" Width="70"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Command="{Binding ButtonCommand}"
            IconWidth="20" IconHeight="20"
            Label="Button" IconTemplate="{StaticResource UserSmall}"
            SizeMode="Normal"
            Tag="Normal" />
        <syncfusion:DropDownButtonAdv
            x:Name="normalDropDownButtonAdv"
            Grid.Row="4"
            Grid.Column="2"
            Height="25" Width="95"
            Label="Shapes"
            IconTemplate="{StaticResource ShapesSmall}"
            SizeMode="Normal">
            <ListBox
                Name="normalDropDown"
                BorderThickness="0"
                ItemTemplate="{StaticResource DefaultTemplate}"
                ItemsSource="{Binding Path=ShapeDetails}">
                <interactivity:Interaction.Triggers>
                    <interactivity:EventTrigger EventName="SelectionChanged">
                        <interactivity:InvokeCommandAction Command="{Binding Path=DropDownCommand}" />
                    </interactivity:EventTrigger>
                </interactivity:Interaction.Triggers>
            </ListBox>
        </syncfusion:DropDownButtonAdv>
        <syncfusion:SplitButtonAdv
            x:Name="normalSplitButton"
            Grid.Row="4"
            Grid.Column="3"
            Height="25" Width="90"
            Command="{Binding ButtonCommand}"
            Label="Colors"
            IconTemplate="{StaticResource PaletteSmall}"
            SizeMode="Normal">
            <ListBox
                Name="normalSplitDropDown"
                BorderThickness="0"
                ItemTemplate="{StaticResource DefaultTemplate}"
                ItemsSource="{Binding Path=ColorDetails}">
                <interactivity:Interaction.Triggers>
                    <interactivity:EventTrigger EventName="SelectionChanged">
                        <interactivity:InvokeCommandAction Command="{Binding Path=DropDownCommand}" />
                    </interactivity:EventTrigger>
                </interactivity:Interaction.Triggers>
            </ListBox>
        </syncfusion:SplitButtonAdv>
        <TextBlock
            Grid.Row="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"><Span FontWeight="SemiBold">SizeMode :</Span>
            Large</TextBlock>
        <syncfusion:ButtonAdv
            x:Name="largeButton"
            Grid.Row="5"
            Grid.Column="1"
            Height="50" Width="50"
            HorizontalAlignment="Center"
            VerticalAlignment="Center" IconWidth="24" IconHeight="24"
            Command="{Binding ButtonCommand}"
            Label="Button" IconTemplate="{StaticResource UserLarge}"
            SizeMode="Large" />
        <syncfusion:DropDownButtonAdv
            x:Name="largeDropDownButtonAdv"
            Grid.Row="5"
            Grid.Column="2"
            Height="50" Width="50"
            Label="Shapes"
            IconTemplate="{StaticResource ShapesLarge}"
            SizeMode="Large">
            <ListBox
                Name="buttonDropdown"
                BorderThickness="0"
                ItemTemplate="{StaticResource DefaultTemplate}"
                ItemsSource="{Binding Path=ShapeDetails}">
                <interactivity:Interaction.Triggers>
                    <interactivity:EventTrigger EventName="SelectionChanged">
                        <interactivity:InvokeCommandAction Command="{Binding Path=DropDownCommand}" />
                    </interactivity:EventTrigger>
                </interactivity:Interaction.Triggers>
            </ListBox>
        </syncfusion:DropDownButtonAdv>
        <syncfusion:SplitButtonAdv
            x:Name="largeSplitButton"
            Grid.Row="5"
            Grid.Column="3"
            Height="50" Width="50"
            Command="{Binding ButtonCommand}"
            Label="Colors"
            IconTemplate="{StaticResource PaletteLarge}"
            IconWidth="24" IconHeight="24"
            SizeMode="Large">
            <ListBox
                Name="LargeSplit"
                BorderThickness="0"
                ItemTemplate="{StaticResource DefaultTemplate}"
                ItemsSource="{Binding Path=ColorDetails}">
                <interactivity:Interaction.Triggers>
                    <interactivity:EventTrigger EventName="SelectionChanged">
                        <interactivity:InvokeCommandAction Command="{Binding Path=DropDownCommand}" />
                    </interactivity:EventTrigger>
                </interactivity:Interaction.Triggers>
            </ListBox>
        </syncfusion:SplitButtonAdv>
    </Grid>
</democommon:DemoControl>
