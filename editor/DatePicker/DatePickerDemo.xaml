<democommon:DemoControl
    x:Class="syncfusion.editordemos.wpf.DatePickerDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.editordemos.wpf"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf">

    <democommon:DemoControl.Resources>
        <local:DateToImageSourceConverter x:Key="datetoImage" />

        <Style x:Key="CustomDateSelector" TargetType="syncfusion:SfDateSelector">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Header" Value="Choose your date of birth" />
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock FontStyle="Italic" Text="{Binding}" />
                    </DataTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="DayCellTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <Grid>
                            <Image
                                Width="16"
                                Margin="5"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Source="{Binding Path=DateTime, Converter={StaticResource datetoImage}, ConverterParameter='Day'}"
                                Stretch="Uniform" />
                            <StackPanel
                                Margin="2"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom">
                                <TextBlock
                                    Margin="0,0,0,-3"
                                    FontSize="20"
                                    Text="{Binding DayNumber}" />
                                <TextBlock
                                    FontSize="12"
                                    FontWeight="Light"
                                    Text="{Binding DayName}" />
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="MonthCellTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <Grid>
                            <Image
                                Width="16"
                                Margin="5"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Source="{Binding Path=DateTime, Converter={StaticResource datetoImage}, ConverterParameter='Month'}"
                                Stretch="Uniform" />
                            <StackPanel
                                Margin="2"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom">
                                <TextBlock
                                    Margin="0,0,0,-3"
                                    FontSize="20"
                                    Text="{Binding MonthNumber}" />
                                <TextBlock
                                    FontSize="12"
                                    FontWeight="Light"
                                    Text="{Binding MonthName}" />
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </democommon:DemoControl.Resources>

    <democommon:DemoControl.DataContext>
        <local:DateTimePickerViewModel />
    </democommon:DemoControl.DataContext>

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230" />
            <ColumnDefinition Width="230" />
            <ColumnDefinition Width="230" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="100" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="100" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Margin="5"
            FontWeight="SemiBold"
            Text="Date Picker" />

        <TextBlock
            Grid.Row="0"
            Grid.Column="1"
            Margin="5"
            FontWeight="SemiBold"
            Text="Date Picker (Freeform Editing)" />

        <TextBlock
            Grid.Row="0"
            Grid.Column="2"
            Margin="5"
            FontWeight="SemiBold"
            Text="Date Picker (No Dropdown)" />

        <syncfusion:SfDatePicker
            Name="default"
            Grid.Row="1"
            Grid.Column="0"
            Width="180"
            Margin="5,5,5,50"
            HorizontalAlignment="Left"
            SetValueOnLostFocus="True" />

        <syncfusion:SfDatePicker
            Grid.Row="1"
            Grid.Column="1"
            Width="180"
            Margin="5,5,5,50"
            HorizontalAlignment="Left"
            AllowInlineEditing="True" />

        <syncfusion:SfDatePicker
            Grid.Row="1"
            Grid.Column="2"
            Width="180"
            Margin="5,5,5,50"
            HorizontalAlignment="Left"
            ShowDropDownButton="False" />

        <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            Margin="5"
            FontWeight="SemiBold"
            Text="Null Value With Watermark " />

        <TextBlock
            Grid.Row="2"
            Grid.Column="1"
            Margin="5"
            FontWeight="SemiBold"
            Text="Value and Selector Formatting" />

        <TextBlock
            Grid.Row="2"
            Grid.Column="2"
            Margin="5"
            FontWeight="SemiBold"
            Text="Readonly" />

        <syncfusion:SfDatePicker
            Grid.Row="3"
            Grid.Column="0"
            Width="180"
            Margin="5,5,5,50"
            HorizontalAlignment="Left"
            AllowNull="True"
            DateTime="{x:Null}">
            <syncfusion:SfDatePicker.WatermarkTemplate>
                <DataTemplate>
                    <TextBlock
                        FontStyle="Italic"
                        Foreground="DimGray"
                        Text="Choose your date of birth" />
                </DataTemplate>
            </syncfusion:SfDatePicker.WatermarkTemplate>
        </syncfusion:SfDatePicker>

        <syncfusion:SfDatePicker
            Grid.Row="3"
            Grid.Column="1"
            Width="180"
            Margin="5,5,5,50"
            HorizontalAlignment="Left"
            SelectorFormatString="y/m/d" />

        <syncfusion:SfDatePicker
            Grid.Row="3"
            Grid.Column="2"
            Width="180"
            Margin="5,5,5,50"
            HorizontalAlignment="Left"
            IsEnabled="False" />

        <StackPanel
            Grid.Row="4"
            Grid.Column="0"
            Margin="5"
            Orientation="Horizontal">
            <TextBlock
                Margin="0"
                Padding="0"
                FontWeight="SemiBold"
                Text="Date Range" />
            <TextBlock
                Margin="0"
                Padding="0"
                FontWeight="SemiBold"
                Text="{Binding MinDate, StringFormat=' (dd MMM yy - '}" />
            <TextBlock
                Margin="0"
                Padding="0"
                FontWeight="SemiBold"
                Text="{Binding MaxDate, StringFormat='dd MMM yy)'}" />
        </StackPanel>

        <TextBlock
            Grid.Row="4"
            Grid.Column="1"
            Margin="5"
            FontWeight="SemiBold"
            Text="Custom Selector Template" />

        <TextBlock
            Grid.Row="4"
            Grid.Column="2"
            Margin="5"
            FontWeight="SemiBold"
            Text="Dropdown Height" />

        <syncfusion:SfDatePicker
            Grid.Row="5"
            Grid.Column="0"
            Width="180"
            Margin="5,5,5,50"
            HorizontalAlignment="Left"
            MaxDate="{Binding MaxDate}"
            MinDate="{Binding MinDate}" />

        <syncfusion:SfDatePicker
            Grid.Row="5"
            Grid.Column="1"
            Width="180"
            Margin="5,5,5,50"
            HorizontalAlignment="Left"
            SelectorItemHeight="70"
            SelectorItemWidth="70"
            SelectorStyle="{StaticResource ResourceKey=CustomDateSelector}" />

        <syncfusion:SfDatePicker
            Grid.Row="5"
            Grid.Column="2"
            Width="180"
            Margin="5,5,5,50"
            HorizontalAlignment="Left"
            DropDownHeight="100" />
    </Grid>
</democommon:DemoControl>
