<democommon:DemoControl
    x:Class="syncfusion.editordemos.wpf.DateSelectorDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.editordemos.wpf"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf">

    <democommon:DemoControl.DataContext>
        <local:DateTimePickerViewModel />
    </democommon:DemoControl.DataContext>

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Margin="50,20"
            FontWeight="Bold"
            Text="Date Selector" />

        <StackPanel
            Grid.Row="0"
            Grid.Column="1"
            Margin="50,20"
            Orientation="Horizontal">
            <TextBlock
                Padding="0"
                FontWeight="Bold"
                Text="Date Range" />
            <TextBlock
                Padding="0"
                FontWeight="Bold"
                Text="{Binding MinDate, StringFormat=' (dd MMM yy - '}" />
            <TextBlock
                Padding="0"
                FontWeight="Bold"
                Text="{Binding MaxDate, StringFormat='dd MMM yy)'}" />
        </StackPanel>

        <TextBlock
            Grid.Row="0"
            Grid.Column="2"
            Margin="50,20"
            FontWeight="Bold"
            Text="UI Customization" />

        <syncfusion:SfDateSelector
            Grid.Row="1"
            Grid.Column="0"
            Height="340"
            Margin="50,20"
            BorderThickness="1"
            ShowCancelButton="False"
            ShowDoneButton="False" />

        <syncfusion:SfDateSelector
            Grid.Row="1"
            Grid.Column="1"
            Height="340"
            Margin="50,20"
            BorderThickness="1"
            MaxDate="{Binding MaxDate}"
            MinDate="{Binding MinDate}"
            ShowCancelButton="False"
            ShowDoneButton="False" />

        <syncfusion:SfDateSelector
            Grid.Row="1"
            Grid.Column="2"
            Height="340"
            Margin="50,20"
            BorderThickness="1"
            FormatString="y/m/d"
            ShowCancelButton="False"
            ShowDoneButton="False" />
    </Grid>
</democommon:DemoControl>
