<democommon:DemoControl
    x:Class="syncfusion.editordemos.wpf.DomainUpDownDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.editordemos.wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <democommon:DemoControl.DataContext>
        <local:DomainUpDownViewModel />
    </democommon:DemoControl.DataContext>

    <ScrollViewer
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        VerticalScrollBarVisibility="Auto">
        <WrapPanel>
            <StackPanel Margin="20">
                <Label
                    Margin="10"
                    Content="ToolTip"
                    FontWeight="DemiBold" />
                <syncfusion:SfDomainUpDown
                    Width="250"
                    Margin="10"
                    ItemsSource="{Binding Countries}"
                    ToolTip="Countries" />
            </StackPanel>
            <StackPanel Margin="20">
                <Label
                    Margin="10"
                    Content="Right To Left"
                    FontWeight="DemiBold" />
                <syncfusion:SfDomainUpDown
                    Width="250"
                    Margin="10"
                    FlowDirection="RightToLeft"
                    ItemsSource="{Binding Countries}" />
            </StackPanel>
            <StackPanel Margin="20">
                <Label
                    Margin="10"
                    Content="Spin Button Alignment (Left)"
                    FontWeight="DemiBold" />
                <syncfusion:SfDomainUpDown
                    Width="250"
                    Margin="10"
                    ItemsSource="{Binding Countries}"
                    SpinButtonsAlignment="Left" />
            </StackPanel>
            <StackPanel Margin="20">
                <Label
                    Margin="10"
                    Content="Spin Button Alignment (Both)"
                    FontWeight="DemiBold" />
                <syncfusion:SfDomainUpDown
                    Width="250"
                    Margin="10"
                    ItemsSource="{Binding Countries}"
                    SpinButtonsAlignment="Both" />
            </StackPanel>
            <StackPanel Margin="20">
                <Label
                    Margin="10"
                    Content="Disabled SpinAnimation"
                    FontWeight="DemiBold" />
                <syncfusion:SfDomainUpDown
                    Width="250"
                    Margin="10"
                    EnableSpinAnimation="False"
                    ItemsSource="{Binding Countries}" />
            </StackPanel>
            <StackPanel Margin="20">
                <Label
                    Margin="10"
                    Content="Disabled state"
                    FontWeight="DemiBold" />
                <syncfusion:SfDomainUpDown
                    Width="250"
                    Margin="10"
                    IsEnabled="False"
                    ItemsSource="{Binding Countries}" />
            </StackPanel>
        </WrapPanel>
    </ScrollViewer>
</democommon:DemoControl>
