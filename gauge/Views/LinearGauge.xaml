<democommon:DemoControl
    x:Class="syncfusion.gaugedemos.wpf.LinearGauge"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.gaugedemos.wpf"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    Width="auto"
    Height="auto"
    OptionsPosition="Right"
    OptionsSize="Auto">

    <democommon:DemoControl.DataContext>
        <local:LinearGaugeViewModel/>
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Resources>
        <democommon:EnumDisplayNameConverter x:Key="EnumDisplayNameConverter" />
    </democommon:DemoControl.Resources>

    <Grid Margin="50,60,60,75">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="35*" />
                <ColumnDefinition Width="75*" />
            </Grid.ColumnDefinitions>
            <Border
                Grid.Column="0"
                BorderBrush="#EDEDED"
                BorderThickness="0.5" />
            <Border
                Grid.Column="1"
                BorderBrush="#EDEDED"
                BorderThickness="0.5" />
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70*" />
                    <RowDefinition Height="30*" />
                </Grid.RowDefinitions>
                <syncfusion:SfLinearGauge
                    Name="SfLinearGauge1"
                    Grid.Row="0"
                    Grid.Column="1"
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal">
                    <syncfusion:SfLinearGauge.MainScale>
                        <syncfusion:LinearScale
                            Name="LinearScale1"
                            Interval="1"
                            LabelOffset="5"
                            LabelPosition="{Binding LinearLabelsPosition, Mode=TwoWay}"
                            LabelSize="13"
                            MajorTickSize="15"
                            Maximum="10"
                            Minimum="0"
                            MinorTickSize="8"
                            MinorTicksPerInterval="1"
                            RangePosition="{Binding LinearRangesPosition, Mode=TwoWay}"
                            ScaleBarSize="35"
                            ScaleDirection="Forward"
                            TickPosition="{Binding LinearTicksPosition, Mode=TwoWay}">
                            <syncfusion:LinearScale.Pointers>
                                <syncfusion:LinearPointer
                                    Name="LinearPointer"
                                    BarPointerStrokeThickness="10"
                                    Opacity="0.8"
                                    PointerType="{Binding LinearPointerType, Mode=TwoWay}"
                                    SymbolPointerHeight="10"
                                    SymbolPointerPosition="Cross"
                                    SymbolPointerStyle="Triangle"
                                    SymbolPointerWidth="10"
                                    Value="4.5" />
                            </syncfusion:LinearScale.Pointers>
                            <syncfusion:LinearScale.Ranges>
                                <syncfusion:LinearRange
                                    EndValue="5"
                                    EndWidth="10"
                                    RangeOffset="-10"
                                    RangeOpacity="1"
                                    StartValue="0"
                                    StartWidth="10" />
                                <syncfusion:LinearRange
                                    EndValue="10"
                                    EndWidth="10"
                                    RangeOffset="-10"
                                    RangeOpacity="1"
                                    StartValue="5"
                                    StartWidth="10" />
                            </syncfusion:LinearScale.Ranges>
                        </syncfusion:LinearScale>
                    </syncfusion:SfLinearGauge.MainScale>
                </syncfusion:SfLinearGauge>
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="0,0,0,20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    FontSize="16"
                    Foreground="#515151"
                    Text="Total Rainfall (in mm)" />
            </Grid>

            <syncfusion:SfLinearGauge
                Name="SfLinearGauge2"
                Grid.Column="0"
                HorizontalAlignment="Center"
                Orientation="Vertical">
                <syncfusion:SfLinearGauge.MainScale>
                    <syncfusion:LinearScale
                        Name="LinearScale2"
                        FlowDirection="RightToLeft"
                        Interval="5"
                        LabelOffset="5"
                        LabelPosition="{Binding LinearLabelsPosition, Mode=TwoWay}"
                        MajorTickSize="15"
                        Maximum="40"
                        Minimum="0"
                        MinorTickSize="8"
                        MinorTicksPerInterval="1"
                        RangePosition="{Binding LinearRangesPosition, Mode=TwoWay}"
                        ScaleBarBorderThickness="1"
                        ScaleBarSize="35"
                        ScaleDirection="Forward"
                        TickPosition="{Binding LinearTicksPosition, Mode=TwoWay}">
                        <syncfusion:LinearScale.Pointers>
                            <syncfusion:LinearPointer
                                Name="LinearPointer2"
                                BarPointerStrokeThickness="10"
                                Opacity=".8"
                                PointerType="{Binding LinearPointerType, Mode=TwoWay}"
                                SymbolPointerHeight="10"
                                SymbolPointerWidth="10"
                                Value="20" />
                            <syncfusion:LinearPointer
                                Name="LinearPointer3"
                                PointerType="SymbolPointer"
                                SymbolPointerHeight="10"
                                SymbolPointerWidth="10"
                                Value="20" />
                        </syncfusion:LinearScale.Pointers>
                        <syncfusion:LinearScale.Ranges>
                            <syncfusion:LinearRange
                                EndValue="20"
                                EndWidth="10"
                                RangeOffset="-10"
                                RangeOpacity="1"
                                StartValue="0"
                                StartWidth="10" />
                            <syncfusion:LinearRange
                                EndValue="40"
                                EndWidth="10"
                                RangeOffset="-10"
                                RangeOpacity="1"
                                StartValue="20"
                                StartWidth="10" />
                        </syncfusion:LinearScale.Ranges>
                    </syncfusion:LinearScale>
                </syncfusion:SfLinearGauge.MainScale>
            </syncfusion:SfLinearGauge>
            <TextBlock
                Grid.Column="0"
                Margin="0,0,0,20"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                FontSize="16"
                Foreground="#515151"
                Text="Room Temperature (in °C)" />
        </Grid>
    </Grid>

    <democommon:DemoControl.Options>
        <StackPanel Width="170" Margin="0,15,0,0">
            <TextBlock 
                Margin="10,0,0,0"
                Text="Range Position" />
            <ComboBox
                x:Name="cmb_RangePosition"
                Margin="10"
                Height="24px"
                ItemsSource="{democommon:EnumValuesExtension Type=syncfusion:LinearRangesPosition}"
                SelectedItem="{Binding LinearRangesPosition, Mode=TwoWay}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Converter={StaticResource EnumDisplayNameConverter}}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBlock 
                Margin="10,0,0,0"
                Text="Label Position" />
            <ComboBox
                x:Name="cmb_LabelPosition"
                Margin="10"
                Height="24px"
                ItemsSource="{democommon:EnumValuesExtension Type=syncfusion:LinearLabelsPosition}"
                SelectedItem="{Binding LinearLabelsPosition, Mode=TwoWay}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Converter={StaticResource EnumDisplayNameConverter}}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBlock 
                Margin="10,0,0,0" 
                Text="Tick Position" />
            <ComboBox
                x:Name="cmb_TickPosition"
                Margin="10"
                Height="24px"
                ItemsSource="{democommon:EnumValuesExtension Type=syncfusion:LinearTicksPosition}"
                SelectedItem="{Binding LinearTicksPosition, Mode=TwoWay}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Converter={StaticResource EnumDisplayNameConverter}}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBlock
                Margin="10,0,0,0"
                Text="Pointer Types" />
            <ComboBox
                x:Name="cmb_PointerTypes"
                Margin="10"
                Height="24px"
                ItemsSource="{democommon:EnumValuesExtension Type=syncfusion:LinearPointerType}"
                SelectedItem="{Binding LinearPointerType, Mode=TwoWay}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Converter={StaticResource EnumDisplayNameConverter}}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>
    </democommon:DemoControl.Options>

</democommon:DemoControl>
