<democommon:DemoControl
    x:Class="syncfusion.gaugedemos.wpf.PointerCustomization"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    Width="auto"
    Height="auto">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <syncfusion:SfCircularGauge
                x:Name="circularGauge1"
                Grid.Column="0"
                GaugeHeaderPosition="0.5,0.65"
                HeaderAlignment="Custom">
                <syncfusion:SfCircularGauge.GaugeHeader>
                    <TextBlock
                        Width="150"
                        Height="40"
                        FontSize="20"
                        Text="Inverted Triangle" />
                </syncfusion:SfCircularGauge.GaugeHeader>
                <syncfusion:SfCircularGauge.Scales>
                    <syncfusion:CircularScale
                        EndValue="100"
                        RadiusFactor="0.7"
                        RangePointerPosition="Custom"
                        RimStroke="LightGray"
                        ShowLabels="False"
                        ShowTicks="False"
                        StartAngle="180"
                        StartValue="0"
                        SweepAngle="180"
                        TickPosition="Custom">
                        <syncfusion:CircularScale.Pointers>
                            <syncfusion:CircularPointer
                                EnableAnimation="True"
                                PointerType="SymbolPointer"
                                Symbol="InvertedTriangle"
                                SymbolPointerHeight="20"
                                SymbolPointerWidth="30"
                                Offset="0.70"
                                Value="40" />
                        </syncfusion:CircularScale.Pointers>
                    </syncfusion:CircularScale>
                </syncfusion:SfCircularGauge.Scales>
            </syncfusion:SfCircularGauge>

            <syncfusion:SfCircularGauge
                x:Name="circularGauge2"
                Grid.Column="1"
                GaugeHeaderPosition="0.6,0.65"
                HeaderAlignment="Custom">
                <syncfusion:SfCircularGauge.GaugeHeader>
                    <TextBlock
                        Width="150"
                        Height="40"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="Triangle" />
                </syncfusion:SfCircularGauge.GaugeHeader>

                <syncfusion:SfCircularGauge.Scales>
                    <syncfusion:CircularScale
                        EndValue="100"
                        RadiusFactor="0.7"
                        RangePosition="Inside"
                        RimStroke="LightGray"
                        ShowLabels="False"
                        ShowTicks="False"
                        StartAngle="180"
                        StartValue="0"
                        SweepAngle="180">
                        <syncfusion:CircularScale.Pointers>
                            <syncfusion:CircularPointer
                                EnableAnimation="True"
                                PointerType="SymbolPointer"
                                Symbol="Triangle"
                                SymbolPointerStroke="Green"
                                SymbolPointerWidth="30"
                                Offset="0.64"
                                Value="85" />
                        </syncfusion:CircularScale.Pointers>
                    </syncfusion:CircularScale>
                </syncfusion:SfCircularGauge.Scales>
            </syncfusion:SfCircularGauge>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <syncfusion:SfCircularGauge
                x:Name="circularGauge3"
                Grid.Column="0"
                GaugeHeaderPosition="0.55,0.7"
                HeaderAlignment="Custom">
                <syncfusion:SfCircularGauge.GaugeHeader>
                    <TextBlock
                        Width="150"
                        Height="40"
                        FontSize="20"
                        Text="Range Pointer" />
                </syncfusion:SfCircularGauge.GaugeHeader>
                <syncfusion:SfCircularGauge.Scales>
                    <syncfusion:CircularScale
                        EndValue="100"
                        LabelPosition="Custom"
                        RadiusFactor="0.7"
                        RangePointerPosition="Custom"
                        RimStroke="LightGray"
                        ShowLabels="False"
                        ShowTicks="False"
                        StartAngle="180"
                        StartValue="0"
                        SweepAngle="180"
                        TickPosition="Custom">
                        <syncfusion:CircularScale.Pointers>
                            <syncfusion:CircularPointer
                                EnableAnimation="False"
                                PointerType="RangePointer"
                                RangePointerStroke="#FF2680"
                                RangePointerStrokeThickness="20"
                                Offset="0.5"
                                Value="65" />
                        </syncfusion:CircularScale.Pointers>
                    </syncfusion:CircularScale>
                </syncfusion:SfCircularGauge.Scales>
            </syncfusion:SfCircularGauge>

            <syncfusion:SfCircularGauge
                x:Name="circularGauge4"
                Grid.Column="1"
                GaugeHeaderPosition="0.55,0.7"
                HeaderAlignment="Custom">
                <syncfusion:SfCircularGauge.GaugeHeader>
                    <TextBlock
                        Width="150"
                        Height="40"
                        FontSize="20"
                        Text="Needle Pointer" />
                </syncfusion:SfCircularGauge.GaugeHeader>

                <syncfusion:SfCircularGauge.Scales>
                    <syncfusion:CircularScale
                        EndValue="100"
                        RadiusFactor="0.7"
                        RangePosition="Custom"
                        RimStroke="LightGray"
                        ShowLabels="False"
                        ShowTicks="False"
                        StartAngle="180"
                        StartValue="0"
                        SweepAngle="180">
                        <syncfusion:CircularScale.Pointers>
                            <syncfusion:CircularPointer
                                EnableAnimation="True"
                                KnobFill="Transparent"
                                NeedleLengthFactor="0.67"
                                NeedlePointerStroke="Purple"
                                NeedlePointerStrokeThickness="15"
                                NeedlePointerType="Triangle"
                                PointerCapStroke="Transparent"
                                PointerType="NeedlePointer"
                                Offset="0.5"
                                Value="85" />
                        </syncfusion:CircularScale.Pointers>
                    </syncfusion:CircularScale>
                </syncfusion:SfCircularGauge.Scales>
            </syncfusion:SfCircularGauge>

            <syncfusion:SfCircularGauge
                x:Name="circularGauge5"
                Grid.Column="2"
                GaugeHeaderPosition="0.55,0.7"
                HeaderAlignment="Custom">
                <syncfusion:SfCircularGauge.GaugeHeader>
                    <TextBlock
                        Width="150"
                        Height="40"
                        FontSize="20"
                        Text="Multiple Pointer" />
                </syncfusion:SfCircularGauge.GaugeHeader>
                <syncfusion:SfCircularGauge.Scales>
                    <syncfusion:CircularScale
                        EndValue="100"
                        RadiusFactor="0.7"
                        RimStroke="LightGray"
                        ShowLabels="False"
                        ShowTicks="False"
                        StartAngle="180"
                        StartValue="0"
                        SweepAngle="180">
                        <syncfusion:CircularScale.Pointers>
                            <syncfusion:CircularPointer
                                EnableAnimation="True"
                                KnobFill="White"
                                NeedleLengthFactor="0.55"
                                NeedlePointerStroke="#ed7d31"
                                NeedlePointerStrokeThickness="20"
                                NeedlePointerType="Triangle"
                                PointerCapDiameter="20"
                                PointerCapStroke="Transparent"
                                PointerType="NeedlePointer"
                                TailFill="#ed7d31"
                                TailLengthFactor="0.2"
                                Value="35" />
                            <syncfusion:CircularPointer
                                EnableAnimation="True"
                                KnobFill="White"
                                NeedleLengthFactor="0.5"
                                NeedlePointerStroke="#ed7d31"
                                NeedlePointerStrokeThickness="20"
                                NeedlePointerType="Triangle"
                                PointerCapDiameter="20"
                                PointerCapStroke="Transparent"
                                PointerType="NeedlePointer"
                                TailFill="#ed7d31"
                                TailLengthFactor="0.15"
                                Value="75" />
                        </syncfusion:CircularScale.Pointers>
                    </syncfusion:CircularScale>
                </syncfusion:SfCircularGauge.Scales>
            </syncfusion:SfCircularGauge>
        </Grid>

    </Grid>
</democommon:DemoControl>