<democommon:DemoControl
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf" x:Class="syncfusion.gridcontroldemos.wpf.GridStyleInfoAtWork"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
                             Background="White">

    <ScrollViewer CanContentScroll="True"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
        <syncfusion:GridControl x:Name="grid" />
    </ScrollViewer>

    <democommon:DemoControl.Options>
        <StackPanel>
            <TextBlock Margin="5" 
                       Text="Header Background Color"
                       TextWrapping="Wrap" />

            <ComboBox x:Name="headerBg"
                       Margin="5" />

            <TextBlock Margin="5,20,0,0"
                       Text="Table Background color"
                       TextWrapping="Wrap" />

            <ComboBox x:Name="tableBg"
                              Margin="5" />


            <TextBlock Margin="5,20,0,0" 
                       Text="Background Color"
                       TextWrapping="Wrap" />

            <ComboBox x:Name="RowColumnBg"
                              Margin="5" />

            <StackPanel Orientation="Horizontal" Margin="5,20,0,0">
                <TextBlock  
                       Text="Column/Row Index"
                       TextWrapping="Wrap" />

                <syncfusion:IntegerTextBox x:Name="ColumnRowIndex" Width="55" Margin="10,0,0,0" />
            </StackPanel>

            <Button x:Name="Apply" Content="Apply" Click="Apply_Click" Grid.Row="4"
                                               Grid.Column="0" Width="75"
                                               Margin="5,20,0,0"/>

        </StackPanel>
    </democommon:DemoControl.Options>
</democommon:DemoControl>
