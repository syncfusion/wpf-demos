                                                AllowDelete="False"
                                                AllowEdit="False"
                                                AutoPopulateColumns="False"
                                                AutoPopulateRelations="False"
                                                BorderThickness="0"
                                                ItemsSource="{Binding Source={StaticResource SIHoldings}}"
                                                ShowAddNewRow="False">
                        <syncfusion:GridDataControl.StackedHeaderRows>
