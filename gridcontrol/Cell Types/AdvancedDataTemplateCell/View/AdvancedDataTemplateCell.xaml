                                    <syncfusion:GridDataStackedHeaderColumn Name="Header1"
                                                                            ColumnSpan="4"
                                                                            HeaderText="Stock Details" />
                                    <syncfusion:GridDataStackedHeaderColumn Name="Header2"
                                                                            ColumnSpan="2"
