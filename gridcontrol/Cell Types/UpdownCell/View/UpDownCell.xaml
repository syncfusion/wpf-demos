<democommon:DemoControl
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf" x:Class="syncfusion.gridcontroldemos.wpf.UpDownCell"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
                             Background="White">
    <democommon:DemoControl.Resources>
        <!--
            <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
            <ResourceDictionary Source="/Syncfusion.Shared.WPF;component/SkinManager/SkinManager.xaml" />
            </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        -->
    </democommon:DemoControl.Resources>


    <ScrollViewer CanContentScroll="True"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
        <syncfusion:GridControl x:Name="grid" />
    </ScrollViewer>

    <democommon:DemoControl.Options>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!--  Set decimal Separator  -->
            <TextBlock Grid.Row="0" VerticalAlignment="Center"
                               Margin="5"
                               Text="Number Separator"
                               TextWrapping="Wrap" />

            <TextBox Name="NumberGroup"
                             Grid.Row="0"
                             Grid.Column="1"
                             Margin="5"
                             Text="," />

            <!--  Set the Number of decimal digits  -->
            <TextBlock Grid.Row="1" VerticalAlignment="Center"
                               Margin="5"
                               Text="Number Group Size"
                               TextWrapping="Wrap" />

            <TextBox Name="NumberGroupSize"
                             Grid.Row="1"
                             Grid.Column="1"
                             Margin="5"
                             Text="2 3 4" />

            <!--  Set the AutoCorrect duration  -->
            <TextBlock Grid.Row="2" VerticalAlignment="Center"
                               Margin="5"
                               Text="FocusedBackground"
                               TextWrapping="Wrap" />

            <TextBox Name="FocusedBackground"
                             Grid.Row="2"
                             Grid.Column="1"
                             Margin="5"
                             Text="Yellow" />

            <TextBlock Grid.Row="3" VerticalAlignment="Center"
                               Margin="5"
                               Text="No of Decimal Digits"
                               TextWrapping="Wrap" />

            <TextBox Name="NumberDecimalDigits"
                             Grid.Row="3"
                             Grid.Column="1"
                             Margin="5"
                             Text="5" />

            <TextBlock Grid.Row="4" VerticalAlignment="Center"
                               Margin="5"
                               Text="Maximum Value"
                               TextWrapping="Wrap" />

            <TextBox Name="MaxValue"
                             Grid.Row="4"
                             Grid.Column="1"
                             Margin="5"
                             Text="100" />

            <TextBlock Grid.Row="5" VerticalAlignment="Center"
                               Margin="5"
                               Text="Minimum value"
                               TextWrapping="Wrap" />

            <TextBox Name="MinValue"
                             Grid.Row="5"
                             Grid.Column="1"
                             Margin="5"
                             Text="0" />

            <TextBlock Grid.Row="6"
                               Margin="5" VerticalAlignment="Center"
                               Text="FocusedBorderBrush"
                               TextWrapping="Wrap" />

            <TextBox Name="FocusedBorderBrush"
                             Grid.Row="6"
                             Grid.Column="1"
                             Margin="5"
                             Text="Blue" />

            <TextBlock Grid.Row="7"
                               Margin="5" VerticalAlignment="Center"
                               Text="FocusedForeground"
                               TextWrapping="Wrap" />

            <TextBox Name="FocusedForeground"
                             Grid.Row="7"
                             Grid.Column="1"
                             Margin="5"
                             Text="Yellow" />

            <Button Grid.Row="8" Margin="5,10,0,0"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Width="75"
                            HorizontalAlignment="Center"
                            Click="SetAll"
                            Content="Set" />
        </Grid>
    </democommon:DemoControl.Options>
</democommon:DemoControl>
