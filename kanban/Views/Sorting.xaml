        <DataTemplate x:Key="DoneCardTemplate">
            <Border BorderBrush="Transparent" Padding="8" CornerRadius="12">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Offset="0.00" Color="#263C8B8E"/>
                        <GradientStop Offset="0.15" Color="#26026B6E"/>
                        <GradientStop Offset="1.00" Color="Transparent"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid  Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Margin="0,0,0,6" Grid.Row="0" Grid.Column="0" Height="22" Padding="8,4" CornerRadius="10" Background="#E6FFFFFF" >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Path Width="5" Height="5" Grid.Column="0" Stretch="Fill"  HorizontalAlignment="Left" VerticalAlignment="Center"
                                  Fill="{Binding Priority, Converter={StaticResource IndicatorColorConverter}}">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathFigure StartPoint="2,0" 
                                                    IsClosed="True">
                                            <ArcSegment Point="2,4"                        
                                                        Size="2,2"                                        
                                                        RotationAngle="0"
                                                        IsLargeArc="True"                                          
                                                        SweepDirection="Clockwise"/>
                                            <ArcSegment Point="2,0"                       
                                                        Size="2,2"
                                                        RotationAngle="0"
                                                        IsLargeArc="True"
                                                        SweepDirection="Clockwise"/>
                                        </PathFigure>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>
                            <TextBlock Text="{Binding Priority}" Grid.Column="1" FontSize="11" FontFamily="Roboto-Regular"
                                       Foreground="{Binding Priority, Converter={StaticResource IndicatorColorConverter}}" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right" Grid.Row="0">
                        <TextBlock Text="Rank #" FontSize="12" LineHeight="20" FontFamily="Roboto-Regular" VerticalAlignment="Center"
                                   Foreground="{skinManager:ThemeResource ThemeKey={skinManager:ThemeKey Key=LinkForeground}}" />
