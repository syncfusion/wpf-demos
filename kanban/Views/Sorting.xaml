                                   Foreground="{skinManager:ThemeResource ThemeKey={skinManager:ThemeKey Key=LinkForeground}}"/>
                    </StackPanel>

                    <TextBlock Text="{Binding Title}" Grid.Row="1" Grid.ColumnSpan="2" FontWeight="Bold" FontSize="12" FontFamily="Roboto-Regular"
                               LineHeight="20" Foreground="{skinManager:ThemeResource ThemeKey={skinManager:ThemeKey Key=ContentForeground}}"/>

                    <TextBlock Text="{Binding Description}" Grid.Row="2" Grid.ColumnSpan="2" TextWrapping="Wrap" FontSize="12"
                               LineHeight="16" Foreground="{skinManager:ThemeResource ThemeKey={skinManager:ThemeKey Key=ContentForeground}}" FontFamily="Roboto-Regular" />

                    <ItemsControl ItemsSource="{Binding Tags}" Grid.Row="3" Grid.ColumnSpan="2">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="6,2" Margin="0,5,5,0" Style="{StaticResource TagBorderStyle}" HorizontalAlignment="Left" CornerRadius="12">
                                    <TextBlock Text="{Binding}" Foreground="{skinManager:ThemeResource ThemeKey={skinManager:ThemeKey Key=ContentForeground}}"
                                               FontSize="11" Padding="5,4" HorizontalAlignment="Center"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <ProgressBar Height="2" Maximum="100" Value="{Binding Progress}" Grid.Row="4" Grid.ColumnSpan="2" VerticalAlignment="Bottom"
                                 Foreground="{skinManager:ThemeResource ThemeKey={skinManager:ThemeKey Key=SuccessForeground}}" Margin="-8" Background="Transparent"/>
                </Grid>
            </Border>
        </DataTemplate>

