        <DataTemplate x:Key="ToDoCardTemplate">
            <Border BorderBrush="Transparent" Padding="8" CornerRadius="12">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Offset="0.00" Color="#33856EC2"/>
                        <GradientStop Offset="0.15" Color="#336750A4"/>
                        <GradientStop Offset="1.00" Color="Transparent"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Margin="0,0,0,6" Grid.Row="0" Grid.Column="0" Height="22" Padding="8,4" CornerRadius="10" Background="#E6FFFFFF" >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Path Width="5" Height="5" Grid.Column="0" Stretch="Fill"  HorizontalAlignment="Left" VerticalAlignment="Center"
                                  Fill="{Binding Priority, Converter={StaticResource IndicatorColorConverter}}">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathFigure StartPoint="2,0" 
                                                    IsClosed="True">
                                            <ArcSegment Point="2,4"                        
                                                        Size="2,2"                                        
                                                        RotationAngle="0"
                                                        IsLargeArc="True"                                          
                                                        SweepDirection="Clockwise"/>
                                            <ArcSegment Point="2,0"                       
                                                        Size="2,2"
                                                        RotationAngle="0"
                                                        IsLargeArc="True"
                                                        SweepDirection="Clockwise"/>
                                        </PathFigure>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>
                            <TextBlock Text="{Binding Priority}" Grid.Column="1" FontSize="11" FontFamily="Roboto-Regular"
                                       Foreground="{Binding Priority, Converter={StaticResource IndicatorColorConverter}}" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right" Grid.Row="0">
                        <TextBlock Text="Rank #" FontSize="12" LineHeight="20" FontFamily="Roboto-Regular"
                                   Foreground="{skinManager:ThemeResource ThemeKey={skinManager:ThemeKey Key=LinkForeground}}" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Index}" FontSize="12" LineHeight="20"  FontFamily="Roboto-Regular"
                                   Foreground="{skinManager:ThemeResource ThemeKey={skinManager:ThemeKey Key=LinkForeground}}" VerticalAlignment="Center" />
                    </StackPanel>

                    <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="12" FontFamily="Roboto-Regular" Grid.Row="1"
                               Foreground="{skinManager:ThemeResource ThemeKey={skinManager:ThemeKey Key=ContentForeground}}" LineHeight="20" Grid.ColumnSpan="2"/>

                    <TextBlock Text="{Binding Description}" Grid.Row="2" Grid.ColumnSpan="2" LineHeight="16"
                               Foreground="{skinManager:ThemeResource ThemeKey={skinManager:ThemeKey Key=ContentForeground}}" TextWrapping="Wrap" FontFamily="Roboto-Regular" FontSize="12"/>

                    <ItemsControl ItemsSource="{Binding Tags}" Grid.Row="3" Grid.ColumnSpan="2">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="6,2" Margin="0,5,5,0" Style="{StaticResource TagBorderStyle}"
                                        HorizontalAlignment="Left" CornerRadius="12">
                                    <TextBlock Text="{Binding}" Foreground="{skinManager:ThemeResource ThemeKey={skinManager:ThemeKey Key=ContentForeground}}"
                                               FontSize="11" Padding="5,4" HorizontalAlignment="Center"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>
        </DataTemplate>

        <local:CardTemplateSelector x:Key="CardTemplateSelector"
                                    ToDoTemplate="{StaticResource ToDoCardTemplate}"
                                    InProgressTemplate="{StaticResource InProgressCardTemplate}" 
                                    ReviewTemplate="{StaticResource ReviewCardTemplate}"
                                    DoneTemplate="{StaticResource DoneCardTemplate}"/>
    </democommon:DemoControl.Resources>

    <Grid>
        <kanban:SfKanban x:Name="kanban"
                         BorderBrush="Transparent"
                         Margin="5,5,0,5"
                         Background="Transparent"
                         AutoGenerateColumns="False"
                         ColumnMappingPath="Category"
                         ColumnWidth="260"
                         SortingMappingPath="Index"
                         ColumnHeaderTemplate="{StaticResource ColumnHeaderTemplate}"
                         ItemsSource="{Binding Cards}"
                         CardTemplateSelector="{StaticResource CardTemplateSelector}">
            <kanban:KanbanColumn Title="To do" 
                                 Categories="Open" 
                                 Background="Transparent">
                <kanban:KanbanColumn.ErrorBarSettings >
                    <kanban:ErrorBarSettings Height="0"/>
                </kanban:KanbanColumn.ErrorBarSettings>
            </kanban:KanbanColumn>

            <kanban:KanbanColumn Title="In progress"
                                 Categories="In Progress"
                                 Background="Transparent">
                <kanban:KanbanColumn.ErrorBarSettings >
                    <kanban:ErrorBarSettings Height="0"/>
                </kanban:KanbanColumn.ErrorBarSettings>
            </kanban:KanbanColumn>

            <kanban:KanbanColumn Title="Code Review"
                                 Categories="Code Review"
                                 Background="Transparent">
                <kanban:KanbanColumn.ErrorBarSettings >
                    <kanban:ErrorBarSettings Height="0"/>
                </kanban:KanbanColumn.ErrorBarSettings>
            </kanban:KanbanColumn>

            <kanban:KanbanColumn Title="Done"
                                 Categories="Done"
                                 Background="Transparent">
                <kanban:KanbanColumn.ErrorBarSettings >
                    <kanban:ErrorBarSettings Height="0"/>
                </kanban:KanbanColumn.ErrorBarSettings>
            </kanban:KanbanColumn>
        </kanban:SfKanban>

    </Grid>
    <democommon:DemoControl.Options>
        <StackPanel Orientation="Vertical" 
                    VerticalAlignment="Top" >
            <TextBlock Text="SortBy:"
                       FontWeight="SemiBold"
                       FontFamily="Roboto-Regular"
                       TextWrapping="Wrap"
                       FontSize="12"
                       Width="100"
                       Margin="5,8,0,0"
                       HorizontalAlignment="Left"/>
            <ComboBox SelectedIndex="0"
                      ItemsSource="{Binding SortOptions}"
                      Margin="5,8,0,0"
                      Height="25"
                      HorizontalAlignment="Left"
                      FontSize="12"
                      x:Name="sortBySelection"
                      Width="150"/>
            <TextBlock Text="Sorting Order :"
                       FontWeight="SemiBold"
                       FontFamily="Roboto-Regular"
                       TextWrapping="Wrap"
                       FontSize="12"
                       Width="100"
                       Margin="5,8,0,0"
                       HorizontalAlignment="Left"/>
            <ComboBox SelectedIndex="0"
                      ItemsSource="{Binding SortOrder}"
                      HorizontalAlignment="Left"
                      Margin="5,8,0,0"
                      FontSize="12"
                      Height="25"
                      x:Name="sortOrderComboBox"
                      Width="150"/>
            <TextBlock Text="Sorting Mapping Path :"
                       FontWeight="SemiBold"
                       FontSize="12"
                       FontFamily="Roboto-Regular"
                       TextWrapping="Wrap"
                       Width="150"
                       Margin="5,8,0,0"
                       HorizontalAlignment="Left"/>
            <ComboBox SelectedIndex="1"
                      ItemsSource="{Binding SortMappingPath}"
                      HorizontalAlignment="Left"
                      IsEnabled="False"
                      Margin="5,8,0,0"
                      FontSize="12"
                      Height="25"
                      FontFamily="Roboto-Regular"
                      Width="150"
                      x:Name="mappingPathComboBox"/>
        </StackPanel>
    </democommon:DemoControl.Options>
</democommon:DemoControl>