<democommon:DemoControl
    x:Class="syncfusion.layoutdemos.wpf.TileViewDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.layoutdemos.wpf"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    OptionsSize="300"
    OptionsTitle="TileView Properties">
    <democommon:DemoControl.DataContext>
        <local:TileViewViewModel />
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Syncfusion.Themes.Office2019Colorful.WPF;component/TileViewControl/TileViewControl.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <local:CloseModeToStringConverter x:Key="CloseModeToStringConverter" />

            <x:Array x:Key="visibilitylist" Type="{x:Type Visibility}">
                <Visibility>Visible</Visibility>
                <Visibility>Collapsed</Visibility>
            </x:Array>

            <democommon:PrefixSuffixConverter
                x:Key="PrefixSuffixConverter"
                PrefixString="/syncfusion.layoutdemos.wpf;component/Assets/TileView/"
                SuffixString=".jpg" />

            <DataTemplate x:Key="bookTemplate">
                <TextBlock Text="{Binding BookName}" />
            </DataTemplate>

            <DataTemplate x:Key="maximizedContentTemplate">
                <Grid>
                    <Image
                        Grid.RowSpan="2"
                        Margin="5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Source="{Binding Path=BookID, Converter={StaticResource PrefixSuffixConverter}}" />
                </Grid>
            </DataTemplate>

            <DataTemplate x:Key="NormalTemplate">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Image
                        Margin="5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Source="{Binding Path=BookID, Converter={StaticResource PrefixSuffixConverter}}" />
                    <TextBlock
                        Grid.Column="1"
                        Margin="5"
                        FontSize="11"
                        Text="{Binding Description}"
                        TextTrimming="WordEllipsis"
                        TextWrapping="Wrap" />
                </Grid>
            </DataTemplate>

            <Style
                x:Key="tileViewItemStyle"
                BasedOn="{StaticResource SyncfusionTileViewItemStyle}"
                TargetType="syncfusion:TileViewItem">
                <Setter Property="CloseButtonVisibility" Value="{Binding CloseButtonVisibility}" />
                <Setter Property="CloseMode" Value="{Binding CloseMode}" />
                <Setter Property="HeaderVisibility" Value="{Binding HeaderVisibility}" />
                <Setter Property="MinMaxButtonVisibility" Value="{Binding MinMaxButtonVisibility}" />
            </Style>
        </ResourceDictionary>
    </democommon:DemoControl.Resources>

    <democommon:DemoControl.Options>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid TextElement.FontWeight="Normal">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Margin="5"
                        Text="Allow Item Respositioning"
                        TextWrapping="Wrap" />
                    <CheckBox
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="5"
                        VerticalAlignment="Center"
                        IsChecked="{Binding ElementName=tileViewControl, Path=AllowItemRepositioning, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBlock
                        Grid.Row="1"
                        Margin="5"
                        Text="Click Header To Maximize"
                        TextWrapping="Wrap" />
                    <CheckBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="5"
                        VerticalAlignment="Center"
                        IsChecked="{Binding ElementName=tileViewControl, Path=ClickHeaderToMaximize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBlock
                        Grid.Row="2"
                        Margin="5"
                        Text="MinMax On Mouse Over"
                        TextWrapping="WrapWithOverflow" />
                    <CheckBox
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="5"
                        VerticalAlignment="Center"
                        IsChecked="{Binding ElementName=tileViewControl, Path=IsMinMaxButtonOnMouseOverOnly, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBlock
                        Grid.Row="3"
                        Margin="5"
                        Text="Enable Tile Animation"
                        TextWrapping="WrapWithOverflow" />
                    <CheckBox
                        Grid.Row="3"
                        Grid.Column="1"
                        Margin="5"
                        VerticalAlignment="Center"
                        IsChecked="{Binding ElementName=tileViewControl, Path=EnableAnimation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBlock
                        Grid.Row="4"
                        Margin="5"
                        Text="Animation Duration"
                        TextWrapping="WrapWithOverflow" />
                    <syncfusion:TimeSpanEdit
                        Name="AnimationTimeSpan"
                        Grid.Row="4"
                        Grid.Column="1"
                        Margin="5"
                        VerticalAlignment="Center"
                        Format="z"
                        Value="{Binding ElementName=tileViewControl, Path=AnimationDuration, Mode=TwoWay}" />

                    <TextBlock
                        Grid.Row="5"
                        Margin="5"
                        Text="Column Count"
                        TextWrapping="Wrap" />
                    <syncfusion:IntegerTextBox
                        x:Name="columnIntegerTextBox"
                        Grid.Row="5"
                        Grid.Column="1"
                        Margin="5"
                        VerticalAlignment="Center"
                        MaxValue="15"
                        MinValue="3"
                        Value="{Binding ElementName=tileViewControl, Path=ColumnCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBlock
                        Grid.Row="6"
                        Margin="5"
                        Text="Row Count"
                        TextWrapping="Wrap" />
                    <syncfusion:IntegerTextBox
                        x:Name="rowIntegerTextBox"
                        Grid.Row="6"
                        Grid.Column="1"
                        Margin="5"
                        VerticalAlignment="Center"
                        MaxValue="15"
                        MinValue="3"
                        Value="{Binding ElementName=tileViewControl, Path=RowCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBlock
                        Grid.Row="7"
                        Margin="5"
                        Text="Min. Items Orientation"
                        TextWrapping="Wrap" />
                    <ComboBox
                        Grid.Row="7"
                        Grid.Column="1"
                        Margin="5"
                        ItemsSource="{democommon:EnumValues Type={x:Type syncfusion:MinimizedItemsOrientation}}"
                        SelectedItem="{Binding ElementName=tileViewControl, Path=MinimizedItemsOrientation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>

                <Grid
                    Grid.Row="1"
                    DataContext="{Binding ElementName=tileViewControl, Path=SelectedItem}"
                    TextElement.FontWeight="Normal">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.ColumnSpan="2"
                        Margin="5,15,5,5"
                        HorizontalAlignment="Left"
                        FontWeight="Bold"
                        Text="SelectedItem Properties" />

                    <TextBlock
                        Grid.Row="1"
                        Margin="5"
                        Text="Close Button Visibility" />
                    <ComboBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="5"
                        ItemsSource="{StaticResource visibilitylist}"
                        SelectedItem="{Binding CloseButtonVisibility, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBlock
                        Grid.Row="2"
                        Margin="5"
                        Text="Close Mode" />
                    <ComboBox
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="5"
                        ItemsSource="{democommon:EnumValues Type={x:Type syncfusion:CloseMode}}"
                        SelectedIndex="0"
                        SelectedItem="{Binding CloseMode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource CloseModeToStringConverter}}" />

                    <TextBlock
                        Grid.Row="3"
                        Margin="5"
                        Text="Header Visibility" />
                    <ComboBox
                        Grid.Row="3"
                        Grid.Column="1"
                        Margin="5"
                        ItemsSource="{StaticResource visibilitylist}"
                        SelectedItem="{Binding HeaderVisibility, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBlock
                        Grid.Row="4"
                        Margin="5"
                        Text="MinMax Button Visibility" />
                    <ComboBox
                        Grid.Row="4"
                        Grid.Column="1"
                        Margin="5"
                        ItemsSource="{StaticResource visibilitylist}"
                        SelectedItem="{Binding MinMaxButtonVisibility, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>
            </Grid>

        </ScrollViewer>
    </democommon:DemoControl.Options>

    <Grid>
        <syncfusion:TileViewControl
            x:Name="tileViewControl"
            Margin="3,9,7,5"
            AllowItemRepositioning="True"
            AnimationDuration="00:00:00.700"
            ClickHeaderToMaximize="False"
            ColumnCount="3"
            EnableAnimation="True"
            HeaderTemplate="{StaticResource bookTemplate}"
            IsMinMaxButtonOnMouseOverOnly="False"
            ItemContainerStyle="{StaticResource tileViewItemStyle}"
            ItemTemplate="{StaticResource NormalTemplate}"
            ItemsSource="{Binding BookModelItems}"
            MaximizedItemTemplate="{StaticResource maximizedContentTemplate}"
            MinimizedItemTemplate="{StaticResource NormalTemplate}"
            MinimizedItemsOrientation="Right"
            MinimizedItemsPercentage="55"
            RowCount="3"
            SelectedIndex="0" />
    </Grid>
</democommon:DemoControl>
