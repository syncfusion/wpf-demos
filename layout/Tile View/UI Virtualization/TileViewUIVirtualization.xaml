<democommon:DemoControl
    x:Class="syncfusion.layoutdemos.wpf.TileViewVirtualizationDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.layoutdemos.wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <democommon:DemoControl.DataContext>
        <local:TileViewVirtualizationViewModel />
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Resources>
        <DataTemplate x:Key="NormalTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Image
                    Margin="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Source="{Binding MinimizedProfileImage}" />
                <StackPanel
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center">
                    <TextBlock
                        Margin="5"
                        HorizontalAlignment="Left"
                        FontSize="11"
                        Text="{Binding Name}"
                        TextTrimming="WordEllipsis"
                        ToolTip="{Binding Name}" />
                    <TextBlock
                        Margin="5"
                        HorizontalAlignment="Left"
                        FontSize="11"
                        Text="{Binding Title}"
                        TextTrimming="WordEllipsis"
                        ToolTip="{Binding Title}" />
                    <TextBlock
                        Margin="5"
                        HorizontalAlignment="Left"
                        FontSize="11"
                        Text="{Binding BirthDate}"
                        TextTrimming="WordEllipsis"
                        ToolTip="{Binding BirthDate}" />
                </StackPanel>
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="MinimizedTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Image
                    Margin="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Source="{Binding MinimizedProfileImage}" />
                <StackPanel
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center">
                    <TextBlock
                        Margin="5"
                        HorizontalAlignment="Left"
                        FontSize="11"
                        Text="{Binding Name}"
                        TextTrimming="WordEllipsis"
                        ToolTip="{Binding Name}" />
                    <TextBlock
                        Margin="5"
                        HorizontalAlignment="Left"
                        FontSize="11"
                        Text="{Binding Title}"
                        TextTrimming="WordEllipsis"
                        ToolTip="{Binding Title}" />
                    <TextBlock
                        Margin="5"
                        HorizontalAlignment="Left"
                        FontSize="11"
                        Text="{Binding City}"
                        TextTrimming="WordEllipsis"
                        ToolTip="{Binding City}" />
                </StackPanel>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="MaximizedTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Image
                    Margin="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Source="{Binding MaximizedProfileImage}" />
                <StackPanel
                    Grid.Column="1"
                    Margin="10,5,5,5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center">
                    <local:UserTemplate
                        Margin="5,25,5,5"
                        FontSize="22"
                        Header="EmployeeID"
                        Text="{Binding EmployeeID}" />
                    <local:UserTemplate
                        Margin="5,25,5,5"
                        FontSize="22"
                        Header="Name"
                        Text="{Binding Name}" />
                    <local:UserTemplate
                        Margin="5,25,5,5"
                        FontSize="22"
                        Header="BirthDate"
                        Text="{Binding BirthDate}" />
                    <local:UserTemplate
                        Margin="5,25,5,5"
                        FontSize="22"
                        Header="Email"
                        Text="{Binding EmailID}" />
                    <local:UserTemplate
                        Margin="5,25,5,5"
                        FontSize="22"
                        Header="Designation"
                        Text="{Binding Title}" />
                    <local:UserTemplate
                        Margin="5,25,5,5"
                        FontSize="22"
                        Header="City"
                        Text="{Binding City}" />
                    <local:UserTemplate
                        Margin="5,25,5,5"
                        FontSize="22"
                        Header="Contact"
                        Text="{Binding ContactID}" />
                    <local:UserTemplate
                        Margin="5,25,5,5"
                        FontSize="22"
                        Header="SickLeaveHours"
                        Text="{Binding SickLeaveHours}" />
                    <local:UserTemplate
                        Margin="5,25,5,5"
                        FontSize="22"
                        Header="Salary"
                        Text="{Binding Salary}" />
                </StackPanel>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="TileHeaderTemplate">
            <TextBlock Text="{Binding Name, Mode=TwoWay}" />
        </DataTemplate>
    </democommon:DemoControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid Margin="3">
            <Button
                x:Name="button"
                Width="100"
                Height="100"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Command="{Binding Path=LoadTileViewItems}"
                CommandParameter="{Binding ElementName=button}">
                <Button.Effect>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="0" />
                </Button.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="1" TextAlignment="Center">
                        <Span>Load</Span>
                        <LineBreak />
                        <Span FontSize="19" FontWeight="Bold">100K</Span>
                        <LineBreak />
                        <Span>Items</Span>
                    </TextBlock>
                </Grid>
            </Button>
            <syncfusion:TileViewControl
                x:Name="tileViewControl"
                AllowItemRepositioning="False"
                AnimationDuration="00:00:00.700"
                ClickHeaderToMaximize="True"
                ColumnCount="{Binding ColumnCount}"
                EnableAnimation="True"
                HeaderTemplate="{StaticResource TileHeaderTemplate}"
                HorizontalScrollBarVisibility="Visible"
                IsVirtualizing="True"
                ItemTemplate="{StaticResource NormalTemplate}"
                ItemsSource="{Binding EmployeeDetails}"
                MaximizedItemTemplate="{StaticResource MaximizedTemplate}"
                MinimizedItemTemplate="{StaticResource MinimizedTemplate}"
                MinimizedItemsOrientation="Right"
                MinimizedItemsPercentage="20"
                RowCount="{Binding RowCount}">
                <syncfusion:TileViewControl.Style>
                    <Style TargetType="syncfusion:TileViewControl">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding EmployeeDetails}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </syncfusion:TileViewControl.Style>
            </syncfusion:TileViewControl>
        </Grid>
    </Grid>
</democommon:DemoControl>
