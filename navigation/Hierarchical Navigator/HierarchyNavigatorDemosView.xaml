<democommon:DemoControl
    x:Class="syncfusion.navigationdemos.wpf.HierarchyNavigatorDemosView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:interactivity="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:skinManager="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:viewModel="clr-namespace:syncfusion.navigationdemos.wpf">
    <democommon:DemoControl.DataContext>
        <viewModel:HierarchyNavigatorViewModel />
    </democommon:DemoControl.DataContext>
    <democommon:DemoControl.Resources>
        <DataTemplate x:Key="FolderTemplate">
            <TextBlock Text="{Binding Content}" />
        </DataTemplate>
        <HierarchicalDataTemplate
            x:Key="ItemGroup1Template"
            ItemTemplate="{StaticResource FolderTemplate}"
            ItemsSource="{Binding FolderItems}">
            <TextBlock Text="{Binding Content}" />
        </HierarchicalDataTemplate>
        <HierarchicalDataTemplate
            x:Key="ItemGroupTemplate"
            ItemTemplate="{StaticResource ItemGroup1Template}"
            ItemsSource="{Binding FolderItems}">
            <TextBlock Text="{Binding Content}" />
        </HierarchicalDataTemplate>
        <DataTemplate x:Key="ItemArranger">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>
                <Image Width="50" Source="{Binding FolderImage}" />
                <TextBlock
                    Grid.Row="1"
                    Text="{Binding Content}"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />
            </Grid>
        </DataTemplate>
    </democommon:DemoControl.Resources>
    <democommon:DemoControl.Options>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <CheckBox
                x:Name="enableHistory"
                Grid.Row="0"
                Margin="5,5,5,18"
                Content="Enable History"
                IsChecked="True" />
            <CheckBox
                x:Name="enableEdit"
                Grid.Row="1"
                Margin="5,5,5,18"
                Content="Enable Edit mode"
                IsChecked="True" />
            <TextBlock
                Grid.Row="2"
                Margin="5"
                FontWeight="Bold"
                Text="Progress speed in ms " />
            <syncfusion:UpDown
                x:Name="progressBarSeconds"
                Grid.Row="3"
                Width="150"
                Margin="5,5,5,18"
                HorizontalAlignment="Left"
                MaxValue="5000"
                MinValue="0"
                Step="100"
                TextAlignment="Left"
                Value="2000" />
            <TextBlock
                Grid.Row="4"
                Margin="5"
                FontWeight="Bold"
                Text="Progress Action" />
            <StackPanel
                Grid.Row="5"
                Margin="7" Height="25"
                Orientation="Horizontal">
                <Button
                    Margin="0,0,10,0" Width="50"
                    HorizontalAlignment="Left"
                    Content="Show">
                    <interactivity:Interaction.Triggers>
                        <interactivity:EventTrigger EventName="Click">
                            <viewModel:ShowProgressBarBehavior ShowValue="{Binding ElementName=progressBarSeconds, Path=Value}" TargetObject="{Binding ElementName=hierarchyNavigator}" />
                        </interactivity:EventTrigger>
                    </interactivity:Interaction.Triggers>
                </Button>
                <Button
                    Margin="10,0" Width="55"
                    HorizontalAlignment="Left"
                    Content="Cancel">
                    <interactivity:Interaction.Triggers>
                        <interactivity:EventTrigger EventName="Click">
                            <viewModel:CancelProgressBarBehavior CancelValue="{Binding ElementName=progressBarSeconds, Path=Value}" TargetObject="{Binding ElementName=hierarchyNavigator}" />
                        </interactivity:EventTrigger>
                    </interactivity:Interaction.Triggers>
                </Button>
            </StackPanel>
        </Grid>
    </democommon:DemoControl.Options>
    <Grid>
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="300" />
                <RowDefinition Height="200" />
            </Grid.RowDefinitions>
            <syncfusion:HierarchyNavigator
                x:Name="hierarchyNavigator"
                BorderThickness="1"
                IsEnableEditMode="{Binding ElementName=enableEdit, Path=IsChecked}"
                IsEnableHistory="{Binding ElementName=enableHistory, Path=IsChecked}"
                ItemTemplate="{StaticResource ItemGroupTemplate}"
                ItemsSource="{Binding FileItems}"
                SelectedItem="{Binding HierarchyItems, Mode=TwoWay}">
                <interactivity:Interaction.Triggers>
                    <interactivity:EventTrigger EventName="HierarchyNavigatorRefreshButtonClick">
                        <interactivity:InvokeCommandAction Command="{Binding RefreshCommand}" CommandParameter="{Binding ElementName=hierarchyNavigator}" />
                    </interactivity:EventTrigger>
                </interactivity:Interaction.Triggers>
            </syncfusion:HierarchyNavigator>
            <ListBox
                Grid.Row="1"
                BorderThickness="1"
                ItemTemplate="{StaticResource ItemArranger}"
                ItemsSource="{Binding ListBoxItems}"
                KeyboardNavigation.TabNavigation="Continue"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
            </ListBox>
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock
                    Margin="5"
                    FontWeight="Bold"
                    Text="Events" />
                <ListBox
                    Grid.Row="1"
                    BorderThickness="1"
                    ItemsSource="{Binding Path=EventLog}"
                    KeyboardNavigation.TabNavigation="Continue" />
            </Grid>
        </Grid>
    </Grid>
</democommon:DemoControl>
