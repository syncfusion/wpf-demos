    <syncfusion:SfNavigationDrawer
        x:Name="navigationDrawer"
        DisplayMemberPath="Name"
        DisplayMode="Compact"
        IconMemberPath="Icon"
        ItemsSource="{Binding Categories}"
        SelectedItem="{Binding CategorySelectedItem}">
