                        </syncfusion:RibbonButton>
                    </syncfusion:RibbonBar>                    
                </syncfusion:RibbonTab>
            </syncfusion:Ribbon>
        </Grid>
        <Grid Grid.Row="1" x:Name="DockingManagerGrid">
            <syncfusion:DockingManager
                UseDocumentContainer="True"
                x:Name="dockingManager" >
                <ContentControl
                    x:Name="ContentControl"
                    syncfusion:DockingManager.Header="Mailbox"
                    syncfusion:DockingManager.SideInDockedMode="Left"
                    syncfusion:DockingManager.DesiredWidthInDockedMode="250">
                    <ListView
                        BorderThickness="1"
                        Grid.Column="1"
                        ItemsSource="{Binding MailItems}" 
                        SelectedIndex="3"
                        VerticalAlignment="Stretch" 
                        HorizontalAlignment="Stretch"
                        Name="listView">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="170"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter 
                                        Margin="5"
                                        Grid.Column="0" 
                                        Content="{Binding ItemName}" 
                                        VerticalAlignment="Center"/>
                                    <syncfusion:SfBadge
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        Grid.Column="1" 
                                        Height="15" 
                                        Width="32" 
                                        
                                        Content="{Binding UnreadMessageount}"
                                        Shape="Oval"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ContentControl>

                <ContentControl
                    syncfusion:DockingManager.Header="Promotions"
                    syncfusion:DockingManager.State="Document">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="14">
                        Promotions mails are listed here.
                    </TextBlock>
                </ContentControl>

                <ContentControl
                    syncfusion:DockingManager.Header="Social"
                    syncfusion:DockingManager.State="Document">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="14">
                        Social mails are listed here.
                    </TextBlock>
                </ContentControl>
                
                <ContentControl 
                    syncfusion:DockingManager.Header="Primary"
                    syncfusion:DockingManager.State="Document">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="14">
                        Primary mails are listed here.
                    </TextBlock>
                </ContentControl>              
            </syncfusion:DockingManager>
        </Grid>
    </Grid>
</democommon:DemoControl>
