                    Caption="Send/Receive"
                    IsChecked="True">
                    <syncfusion:RibbonBar
                        Width="190"
                        Margin="15,20,0,0" 
                        Header="Inbox">
                        <syncfusion:RibbonButton
                            SizeForm="Large" 
                            Label="Primary">
                            <syncfusion:SfBadge.Badge>
                                <syncfusion:SfBadge
                                    FontSize="10"
                                    Height="15" 
                                    Width="26"
                                    Fill="Information"
                                    Content="99+"
                                    Shape="Oval"/>
                            </syncfusion:SfBadge.Badge>
                        </syncfusion:RibbonButton>
                        <syncfusion:RibbonButton
                            Margin="10,0,10,0" 
                            SizeForm="Large" 
                            Label="Promotions">
                        </syncfusion:RibbonButton>
                        <syncfusion:RibbonButton                 
                            SizeForm="Large" 
                            Label="Social">
                            <syncfusion:SfBadge.Badge>
                                <syncfusion:SfBadge
                                    FontSize="10"
                                    Height="15" 
                                    Width="26"
                                    Fill="Success"
                                    Content="New"
                                    Shape="Oval"/>
                            </syncfusion:SfBadge.Badge>
                        </syncfusion:RibbonButton>
                    </syncfusion:RibbonBar>
                    <syncfusion:RibbonBar
                        Width="185"
                        Margin="15,20,0,0"
                        Header="Delete">
                        <syncfusion:RibbonButton 
                            Label="Deleted Items" 
                            SizeForm="Large">
                            <syncfusion:SfBadge.Badge>
                                <syncfusion:SfBadge
                                    FontSize="10"
                                    Height="15" 
                                    Width="25"
                                    Fill="Alt"
                                    Content="10+"
                                    Shape="Ellipse"/>
                            </syncfusion:SfBadge.Badge>
                        </syncfusion:RibbonButton>
                        <syncfusion:RibbonButton 
                            Margin="20,0,20,0"  
                            Label="Spam Mails" 
                            SizeForm="Large">
                        </syncfusion:RibbonButton>
                        <syncfusion:RibbonButton 
