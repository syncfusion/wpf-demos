            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <cc:PdfViewerControl x:Name="pdfviewer1" Grid.Column="0" ItemSource="{Binding DocumentStream}" ZoomMode="FitPage">
