<democommon:DemoControl
    x:Class="syncfusion.pivotgriddemos.wpf.StatePersistence"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.pivotgriddemos.wpf"
    xmlns:sfshared="clr-namespace:Syncfusion.Windows.Shared;assembly=Syncfusion.Shared.WPF"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:pivotbase="clr-namespace:Syncfusion.PivotAnalysis.Base;assembly=Syncfusion.PivotAnalysis.Base"
    xmlns:syncfusionskin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    syncfusionskin:SfSkinManager.Theme="{syncfusionskin:SkinManagerExtension ThemeName=Windows11Light}"
    OptionsSize="300">

    <democommon:DemoControl.DataContext>
        <local:ProductSalesViewModel />
    </democommon:DemoControl.DataContext>

    <Grid>

        <!--  PivotGrid control  -->
        <syncfusion:PivotGridControl
                x:Name="pivotGrid1"
                Margin="5"
                ItemSource="{Binding ProductSalesData}"
                StatePersistenceEnabled="True">
            <syncfusion:PivotGridControl.PivotRows>
                <pivotbase:PivotItem
                        FieldHeader="Product"
                        FieldMappingName="Product"
                        TotalHeader="Total" />
                <pivotbase:PivotItem
                        FieldHeader="Date"
                        FieldMappingName="Date"
                        TotalHeader="Total" />
            </syncfusion:PivotGridControl.PivotRows>
            <syncfusion:PivotGridControl.PivotColumns>
                <pivotbase:PivotItem
                        FieldHeader="Country"
                        FieldMappingName="Country"
                        TotalHeader="Total" />
                <pivotbase:PivotItem
                        FieldHeader="State"
                        FieldMappingName="State"
                        TotalHeader="Total" />
            </syncfusion:PivotGridControl.PivotColumns>
            <syncfusion:PivotGridControl.PivotCalculations>
                <pivotbase:PivotComputationInfo
                        CalculationName="Total"
                        Description="Summation of values"
                        FieldName="Amount"
                        Format="C"
                        SummaryType="DoubleTotalSum" />
                <pivotbase:PivotComputationInfo
                        CalculationName="Total"
                        Description="Summation of values"
                        FieldName="Quantity"
                        Format="#,##0" />
            </syncfusion:PivotGridControl.PivotCalculations>
        </syncfusion:PivotGridControl>

    </Grid>

    <democommon:DemoControl.Options>
        <syncfusion:TabControlExt
                Margin="5"
                BorderBrush="DarkGray"
                BorderThickness="1"
                CloseButtonType="Hide"
                EnableLabelEdit="False"
                FontSize="12"
                ShowTabListContextMenu="False">
            <syncfusion:TabItemExt Header="Pivot Schema Designer">
                <syncfusion:PivotSchemaDesigner
                        Name="SchemaDesigner"
                        Margin="2"/>
            </syncfusion:TabItemExt>

            <syncfusion:TabItemExt Header="Properties">
                <StackPanel Margin="5" Orientation="Vertical">
                    <CheckBox x:Name="statePersistanceCheckBox"
                            Margin="0,10"
                            Content="Enable State Persistence"
                            Click="StatePersistanceCheckBox_Click"
                            IsChecked="True" />
                    <Button x:Name="refreshButton"
                            Width="150"
                            Height="25"
                            Margin="0,10"
                            Command="{x:Static syncfusion:PivotGridCommands.Refresh}"
                            Content="Refresh"
                            ToolTip="Refreshes the whole pivot grid with default behavior (i.e., De-activated the StatePersistenceEnabled property)" />
                </StackPanel>
            </syncfusion:TabItemExt>
        </syncfusion:TabControlExt>
    </democommon:DemoControl.Options>
    
</democommon:DemoControl>