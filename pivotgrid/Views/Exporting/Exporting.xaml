<democommon:DemoControl
    x:Class="syncfusion.pivotgriddemos.wpf.Exporting"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:export="clr-namespace:Syncfusion.Windows.Controls.PivotGrid.Converter;assembly=Syncfusion.PivotGridConverter.Wpf"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:syncfusion.pivotgriddemos.wpf"
    xmlns:sfshared="clr-namespace:Syncfusion.Windows.Shared;assembly=Syncfusion.Shared.WPF"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    sfshared:SkinStorage.VisualStyle="Metro"
    OptionsSize="300" Background="White">

    <democommon:DemoControl.DataContext>
        <local:ProductSalesViewModel />
    </democommon:DemoControl.DataContext>

    <Grid>

        <!--  PivotGrid control  -->
            <syncfusion:PivotGridControl
                x:Name="pivotGrid1"
                Margin="5"
                ItemSource="{Binding ProductSalesData}">
                <syncfusion:PivotGridControl.PivotRows>
                    <syncfusion:PivotItem
                        FieldHeader="Product"
                        FieldMappingName="Product"
                        TotalHeader="Total" />
                    <syncfusion:PivotItem
                        FieldHeader="Date"
                        FieldMappingName="Date"
                        TotalHeader="Total" />
                </syncfusion:PivotGridControl.PivotRows>
                <syncfusion:PivotGridControl.PivotColumns>
                    <syncfusion:PivotItem
                        FieldHeader="Country"
                        FieldMappingName="Country"
                        TotalHeader="Total" />
                    <syncfusion:PivotItem
                        FieldHeader="State"
                        FieldMappingName="State"
                        TotalHeader="Total" />
                </syncfusion:PivotGridControl.PivotColumns>
                <syncfusion:PivotGridControl.PivotCalculations>
                    <syncfusion:PivotComputationInfo
                        CalculationName="Total"
                        Description="Summation of values"
                        FieldName="Amount"
                        Format="C"
                        SummaryType="DoubleTotalSum" />
                    <syncfusion:PivotComputationInfo
                        CalculationName="Total"
                        Description="Summation of values"
                        FieldName="Quantity"
                        Format="#,##0" />
                </syncfusion:PivotGridControl.PivotCalculations>
            </syncfusion:PivotGridControl>
            
    </Grid>
    <democommon:DemoControl.Options>
        <syncfusion:TabControlExt
                Margin="5"
                BorderBrush="DarkGray"
                BorderThickness="1"
                CloseButtonType="Hide"
                EnableLabelEdit="False"
                FontSize="12"
                ShowTabListContextMenu="False">
            <syncfusion:TabItemExt Header="Pivot Schema Designer">
                <syncfusion:PivotSchemaDesigner
                        Name="SchemaDesigner"
                        Margin="2"/>
            </syncfusion:TabItemExt>

            <syncfusion:TabItemExt Header="Properties">
                <StackPanel>
                    <GroupBox
                            Margin="5"
                            BorderBrush="DarkGray"
                            BorderThickness="1"
                            Header="Export Options">
                        <GroupBox.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock FontWeight="Bold" Text="{Binding}" />
                            </DataTemplate>
                        </GroupBox.HeaderTemplate>

                        <StackPanel Margin="5">
                            <!--  Export to Word  -->
                            <Button
                                    x:Name="btnExporToWord"
                                    Width="150"
                                    Height="25"
                                    Margin="0,10"
                                    Content="Export To Word">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <local:ExportTriggerAction TargetObject="{Binding ElementName=pivotGrid1}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>

                            <!--  Export to PDF  -->
                            <Button
                                    x:Name="btnExporToPDF"
                                    Width="150"
                                    Height="25"
                                    Margin="0,10"
                                    Content="Export To PDF">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <local:ExportTriggerAction TargetObject="{Binding ElementName=pivotGrid1}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>

                            <!--  Export To CSV  -->
                            <Button
                                    x:Name="btnExporToCSV"
                                    Width="150"
                                    Height="25"
                                    Margin="0,10"
                                    Content="Export To CSV">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <local:ExportTriggerAction TargetObject="{Binding ElementName=pivotGrid1}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox
                            Margin="5"
                            BorderBrush="DarkGray"
                            BorderThickness="1"
                            Header="Export to Excel">
                        <GroupBox.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock FontWeight="Bold" Text="{Binding}" />
                            </DataTemplate>
                        </GroupBox.HeaderTemplate>

                        <StackPanel Margin="5">
                            <!--  Export Mode  -->
                            <TextBlock Margin="0,10" Text="Export Mode" />
                            <ComboBox
                                    x:Name="cmbExportMode"
                                    Height="25"
                                    Margin="0,10"
                                    ItemsSource="{democommon:EnumValuesExtension Type=export:ExportModes}"
                                    SelectedIndex="0">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="SelectionChanged">
                                        <local:ExportTriggerAction TargetObject="{Binding ElementName=pivotGrid1}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </ComboBox>

                            <!--  Export to Excel  -->
                            <Button
                                    x:Name="btnExporToExcel"
                                    Width="150"
                                    Height="25"
                                    Margin="0,10"
                                    Content="Export To Excel">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <local:ExportTriggerAction TargetObject="{Binding ElementName=pivotGrid1}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </syncfusion:TabItemExt>
        </syncfusion:TabControlExt>
    </democommon:DemoControl.Options>
    
</democommon:DemoControl>