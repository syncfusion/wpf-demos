<democommon:DemoControl
    x:Class="syncfusion.pivotgriddemos.wpf.Printing"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.pivotgriddemos.wpf"
    xmlns:sfshared="clr-namespace:Syncfusion.Windows.Shared;assembly=Syncfusion.Shared.WPF"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    sfshared:SkinStorage.VisualStyle="Metro"
    OptionsSize="300" Background="White">

    <democommon:DemoControl.Resources>
        <DataTemplate x:Key="HeaderTemplate">
            <Grid Height="30">
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="15"
                    FontWeight="Bold"
                    Text="Header" />
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="FooterTemplate">
            <Grid Height="30">
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="15"
                    FontWeight="Bold"
                    Text="Footer" />
            </Grid>
        </DataTemplate>
    </democommon:DemoControl.Resources>

    <democommon:DemoControl.DataContext>
        <local:PrintViewModel />
    </democommon:DemoControl.DataContext>

    <Grid>

        <!--  PivotGrid control  -->
        <syncfusion:PivotGridControl
                x:Name="pivotGrid1"
                Margin="5"
                ItemSource="{Binding ProductSalesData}"
                ShowGroupingBar="False">
            <syncfusion:PivotGridControl.PivotRows>
                <syncfusion:PivotItem
                        FieldHeader="Product"
                        FieldMappingName="Product"
                        TotalHeader="Total" />
                <syncfusion:PivotItem
                        FieldHeader="Date"
                        FieldMappingName="Date"
                        TotalHeader="Total" />
            </syncfusion:PivotGridControl.PivotRows>
            <syncfusion:PivotGridControl.PivotColumns>
                <syncfusion:PivotItem
                        FieldHeader="Country"
                        FieldMappingName="Country"
                        TotalHeader="Total" />
                <syncfusion:PivotItem
                        FieldHeader="State/Province"
                        FieldMappingName="State"
                        TotalHeader="Total" />
            </syncfusion:PivotGridControl.PivotColumns>
            <syncfusion:PivotGridControl.PivotCalculations>
                <syncfusion:PivotComputationInfo
                        CalculationName="Total"
                        Description="Summation of values"
                        FieldName="Amount"
                        Format="C"
                        SummaryType="DoubleTotalSum" />
                <syncfusion:PivotComputationInfo
                        CalculationName="Total"
                        Description="Summation of values"
                        FieldName="Quantity"
                        Format="#,##0" />
            </syncfusion:PivotGridControl.PivotCalculations>
        </syncfusion:PivotGridControl>

    </Grid>


    <democommon:DemoControl.Options>
        <GroupBox
                Margin="5,0,5,5"
                BorderBrush="DarkGray"
                BorderThickness="1">
            <GroupBox.HeaderTemplate>
                <DataTemplate>
                    <TextBlock FontWeight="Bold" Text="{Binding}" />
                </DataTemplate>
            </GroupBox.HeaderTemplate>

            <StackPanel Margin="5">
                <CheckBox
                        x:Name="chkHeader"
                        Margin="0,10"
                        Command="{Binding HeaderCommand}"
                        CommandParameter="{Binding Source={StaticResource HeaderTemplate}}"
                        Content="Header"
                        IsChecked="{Binding IsHeaderChecked, Mode=TwoWay}" />
                <CheckBox
                        x:Name="chkFooter"
                        Margin="0,10"
                        Command="{Binding FooterCommand}"
                        CommandParameter="{Binding Source={StaticResource FooterTemplate}}"
                        Content="Footer"
                        IsChecked="{Binding IsFooterChecked, Mode=TwoWay}" />
                <CheckBox
                        x:Name="chkGroupBar"
                        Margin="0,10"
                        Content="Grouping Bar"
                        IsChecked="{Binding Path=ShowGroupingBar, ElementName=pivotGrid1, Mode=TwoWay}" />
                <Button
                        Name="button1"
                        Width="100"
                        Height="25"
                        Margin="0,10"
                        Command="{Binding PrintCommand}"
                        CommandParameter="{Binding ElementName=pivotGrid1}"
                        Content="Print" />
            </StackPanel>
        </GroupBox>
    </democommon:DemoControl.Options>
    
</democommon:DemoControl>