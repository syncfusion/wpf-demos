<democommon:DemoControl
    x:Class="syncfusion.pivotgriddemos.wpf.CellSelection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.pivotgriddemos.wpf"
    xmlns:sfshared="clr-namespace:Syncfusion.Windows.Shared;assembly=Syncfusion.Shared.WPF"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    sfshared:SkinStorage.VisualStyle="Metro"
    OptionsSize="300" Background="White">

    <democommon:DemoControl.DataContext>
        <local:ProductSalesViewModel />
    </democommon:DemoControl.DataContext>

    <Grid>

        <!--  PivotGrid control  -->
        <Grid>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="150" />
                </Grid.RowDefinitions>
                <syncfusion:PivotGridControl
                    x:Name="pivotGrid1"
                    Grid.Row="0"
                    Margin="5"
                    AllowSelection="True"
                    ItemSource="{Binding ProductSalesData}"
                    ShowGroupingBar="False">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <local:CellSelectionAction TargetObject="{Binding ElementName=lstSelectedItems}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <syncfusion:PivotGridControl.PivotRows>
                        <syncfusion:PivotItem
                            FieldHeader="Product"
                            FieldMappingName="Product"
                            TotalHeader="Total" />
                        <syncfusion:PivotItem
                            FieldHeader="Date"
                            FieldMappingName="Date"
                            TotalHeader="Total" />
                    </syncfusion:PivotGridControl.PivotRows>
                    <syncfusion:PivotGridControl.PivotColumns>
                        <syncfusion:PivotItem
                            FieldHeader="Country"
                            FieldMappingName="Country"
                            TotalHeader="Total" />
                        <syncfusion:PivotItem
                            FieldHeader="State"
                            FieldMappingName="State"
                            TotalHeader="Total" />
                    </syncfusion:PivotGridControl.PivotColumns>
                    <syncfusion:PivotGridControl.PivotCalculations>
                        <syncfusion:PivotComputationInfo
                            CalculationName="Total"
                            Description="Summation of values"
                            FieldName="Amount"
                            Format="C"
                            SummaryType="DoubleTotalSum" />
                        <syncfusion:PivotComputationInfo
                            CalculationName="Total"
                            Description="Summation of values"
                            FieldName="Quantity"
                            Format="#,##0" />
                    </syncfusion:PivotGridControl.PivotCalculations>

                </syncfusion:PivotGridControl>

                <GroupBox
                    Grid.Row="1"
                    Margin="5,0,4,5"
                    BorderBrush="DarkGray"
                    BorderThickness="1"
                    FontFamily="Calibri"
                    FontSize="14"
                    FontStretch="Condensed"
                    Header="Selected Items">
                    <ListBox x:Name="lstSelectedItems" Margin="3" />
                </GroupBox>
            </Grid>
        </Grid>
    </Grid>

    <democommon:DemoControl.Options>
        <syncfusion:TabControlExt
                Margin="5"
                BorderBrush="DarkGray"
                BorderThickness="1"
                CloseButtonType="Hide"
                EnableLabelEdit="False"
                FontSize="12"
                ShowTabListContextMenu="False">
            <syncfusion:TabItemExt Header="Pivot Schema Designer">
                <syncfusion:PivotSchemaDesigner
                        Name="SchemaDesigner"
                        Margin="2" />
            </syncfusion:TabItemExt>

            <syncfusion:TabItemExt Header="Properties">
                <StackPanel Margin="5">
                    <RadioButton
                            x:Name="chkBoxAllowSelection"
                            Margin="0,10"
                            Content="Enable Cell Selection"
                            IsChecked="{Binding ElementName=pivotGrid1, Path=AllowSelection, Mode=TwoWay}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Unchecked">
                                <local:CheckboxUncheckedAction TargetObject="{Binding ElementName=lstSelectedItems}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </RadioButton>
                    <RadioButton
                            x:Name="chkBoxAllowSelectionwithheaders"
                            Margin="0,10"
                            Content="Enable Cell Selection with headers"
                            IsChecked="{Binding ElementName=pivotGrid1, Path=AllowSelectionWithHeaders, Mode=TwoWay}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Unchecked">
                                <local:CheckboxUncheckedAction TargetObject="{Binding ElementName=lstSelectedItems}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </RadioButton>
                </StackPanel>
            </syncfusion:TabItemExt>
        </syncfusion:TabControlExt>
    </democommon:DemoControl.Options>
    
</democommon:DemoControl>