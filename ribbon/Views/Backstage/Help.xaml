<UserControl
    x:Class="syncfusion.ribbondemos.wpf.Help"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:syncfusion.ribbondemos.wpf"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf">
    <UserControl.DataContext>
        <local:BackstageViewModel />
    </UserControl.DataContext>
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/syncfusion.ribbondemos.wpf;component/Assets/Ribbon/PathIcon.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock
                Margin="10"
                FontFamily="Segoe UI"
                FontSize="20"
                Text="Syncfusion User Interface Help" />
            <Rectangle
                Grid.Row="1"
                Height="1"
                Margin="10"
                HorizontalAlignment="Stretch"
                Stroke="Gray"
                StrokeDashArray="5"
                StrokeThickness="1" />
            <Grid Grid.Row="2" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <syncfusion:ButtonAdv
                    Name="onlineButton"
                    Margin="5"
                    HorizontalAlignment="Left"
                    Command="local:RibbonCommand.HelpCommand"
                    IconHeight="48"
                    IconWidth="48"
                    Height="70"
                    Width="75"
                    Label="Online Help"
                    IconTemplate="{StaticResource Help}"
                    SizeMode="Large" />
                <StackPanel
                    Grid.Column="1"
                    Margin="3"
                    VerticalAlignment="Top">
                    <TextBlock
                        Grid.Column="1"
                        Margin="3"
                        FontWeight="Bold"
                        Text="Online Help" />
                    <TextBlock
                        Grid.Column="1"
                        Margin="3"
                        Text="UG documents helps understanding the usage of our Syncfusion UI components."
                        TextWrapping="Wrap" />
                </StackPanel>
            </Grid>
            <Rectangle
                Grid.Row="3"
                Height="1"
                Margin="10"
                HorizontalAlignment="Stretch"
                Stroke="Gray"
                StrokeDashArray="5"
                StrokeThickness="1" />
            <Grid Grid.Row="4" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <syncfusion:ButtonAdv
                    Margin="5"
                    HorizontalAlignment="Left"
                    Command="local:RibbonCommand.GettingStartedCommand"
                    IconHeight="48"
                    IconWidth="48"
                    Height="70"
                    Width="90"
                    Label="Getting Started"
                    IconTemplate="{StaticResource GettingStarted}"
                    SizeMode="Large" />
                <StackPanel
                    Grid.Column="1"
                    Margin="3"
                    VerticalAlignment="Top">
                    <TextBlock
                        Grid.Column="1"
                        Margin="3"
                        FontWeight="Bold"
                        Text="Getting Started" />
                    <TextBlock
                        Grid.Column="1"
                        Margin="3"
                        Text="A complete information on Syncfusion Ribbon control and its usage."
                        TextWrapping="Wrap" />
                </StackPanel>
            </Grid>
        </Grid>
        <Border
            Grid.Column="1"
            Margin="15"
            HorizontalAlignment="Left"
            BorderBrush="#FFBCBCBC"
            BorderThickness="0.5" />
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Button
                Margin="0,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Command="{Binding Path=HelpTabCloseBackstageCommand}">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Grid>
                                        <Border
                                            x:Name="bor"
                                            Background="Gray"
                                            Opacity="0.1">
                                            <Border.BitmapEffect>
                                                <BlurBitmapEffect />
                                            </Border.BitmapEffect>
                                        </Border>
                                        <ContentPresenter Margin="3" />
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="bor" Property="Opacity" Value="0.5" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
                <Image
                    Width="400"
                    Height="300"
                    Source="/syncfusion.ribbondemos.wpf;component/Assets/Ribbon/document.png"
                    Stretch="Fill" />
            </Button>
            <Grid Grid.Row="1">
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
                    <syncfusion:RibbonCheckBox
                        x:Name="BackStageClosingCheckBox1"
                        Margin="10"
                        VerticalAlignment="Center"
                        syncfusion:Ribbon.KeyTip="Z"
                        Content="Cancel Backstage Closing"
                        IsChecked="{Binding CancelBackStageClosingInHelpTab}" />
                    <syncfusion:ButtonAdv
                        Height="30" Width="140"
                        HorizontalAlignment="Left"
                        Command="{Binding Path=HelpTabCloseBackstageCommand}"
                        IconHeight="0" IconWidth="0" SmallIcon="{x:Null}"
                        IsMultiLine="False"
                        Label="Close Backstage" />
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
