<syncfusion:ChromelessWindow
    x:Class="syncfusion.formulaanalysis.wpf.FormulaAnalysisDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:interactivity="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:syncfusion.formulaanalysis.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    Title="Formula Analysis"
    skin:SfSkinManager.VisualStyle="MaterialDarkBlue"
    Icon="/syncfusion.formulaanalysis.wpf;component/Assets/FormulaAnalysis/App.ico"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized">

    <Window.DataContext>
        <local:ViewModel />
    </Window.DataContext>

    <interactivity:Interaction.Behaviors>
        <local:FormulaAnalysisBehavior />
    </interactivity:Interaction.Behaviors>

    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="10" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="*" />
                <RowDefinition Height="25" />
            </Grid.RowDefinitions>

            <Grid
                Name="dataGrid"
                Grid.Row="1"
                Grid.Column="1"
                Background="#1c3061">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="40" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="10" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="10" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="Segoe UI"
                    FontSize="26"
                    Text="Calculate"
                    TextWrapping="Wrap"
                    Visibility="Collapsed" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="Segoe UI"
                    FontSize="26"
                    Text="G"
                    TextWrapping="Wrap"
                    Visibility="Collapsed" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="Segoe UI"
                    FontSize="16"
                    Text="GRID"
                    TextWrapping="Wrap"
                    Visibility="Collapsed" />
                <TextBlock
                    Grid.Row="4"
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="Segoe UI"
                    FontSize="16"
                    Text="G"
                    TextWrapping="Wrap"
                    Visibility="Collapsed" />

                <Label
                    Name="label5"
                    Grid.Row="1"
                    Grid.ColumnSpan="5"
                    Content="        SAMPLE DATA SET"
                    Focusable="False"
                    FontSize="20.75"
                    FontWeight="Normal"
                    TabIndex="4" />
                <Border
                    Grid.Row="3"
                    Grid.Column="1"
                    BorderBrush="DimGray"
                    BorderThickness="1"
                    CornerRadius="0">
                    <Grid
                        Name="gridpanel"
                        Grid.Row="3"
                        Grid.Column="1"
                        Grid.ColumnSpan="2" />
                </Border>
            </Grid>

            <Grid
                Name="contentGrid"
                Grid.Row="1"
                Grid.Column="3"
                Background="#1c3061">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="10" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock
                    Name="tempTextBlock"
                    Grid.Row="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="4"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="#32456d"
                    FontFamily="Segoe UI"
                    FontSize="26"
                    Foreground="#32456d"
                    Text="G"
                    TextWrapping="Wrap" />
                <Grid
                    Name="contentGrid1"
                    Grid.Row="1"
                    Grid.Column="1">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="10" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="10" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Name="functionCountLable"
                        Grid.Row="1"
                        Grid.Column="1"
                        Grid.ColumnSpan="3"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        FontSize="15.75"
                        FontStretch="Medium"
                        Text="Its Supports 407 formulas" />
                    <syncfusion:AutoComplete
                        Name="cbx1"
                        Grid.Row="3"
                        Grid.Column="1"
                        Height="20"
                        VerticalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        VerticalContentAlignment="Center"
                        Background="#1c3061"
                        CanResizePopup="False"
                        DataContext="{Binding}"
                        Focusable="True"
                        FontStretch="Normal"
                        Source="Custom" />
                    <TextBox
                        Name="t1"
                        Grid.Row="3"
                        Grid.Column="3"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        VerticalContentAlignment="Center"
                        FontSize="14.75"
                        SelectionBrush="{x:Null}"
                        Text="{Binding SumText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        TextAlignment="Justify"
                        TextWrapping="Wrap" />
                    <Button
                        Name="buttonAdv"
                        Grid.Row="5"
                        Grid.Column="1"
                        Height="30"
                        BorderBrush="{x:Null}"
                        BorderThickness="0"
                        Command="{Binding ButtonCommand}"
                        Content="Calculate"
                        Focusable="True"
                        FontSize="15.75"
                        IsEnabled="True"
                        IsTabStop="True"
                        Visibility="Visible" />
                    <Label
                        Grid.Row="7"
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        Content="DESCRIPTION"
                        FontSize="14.25"
                        FontWeight="Normal" />
                    <TextBox
                        Name="desc"
                        Grid.Row="8"
                        Grid.Column="1"
                        Grid.ColumnSpan="3"
                        Width="500"
                        VerticalContentAlignment="Top"
                        BorderBrush="{x:Null}"
                        BorderThickness="0"
                        FontSize="14"
                        FontStretch="Medium"
                        IsEnabled="True"
                        IsReadOnly="True"
                        Text="{Binding DescriptionText, Mode=TwoWay}"
                        TextWrapping="Wrap" />
                    <Label
                        Grid.Row="10"
                        Grid.Column="1"
                        Content="SYNTAX"
                        FontSize="14.25"
                        FontWeight="Normal" />
                    <TextBox
                        Name="sytx"
                        Grid.Row="11"
                        Grid.Column="1"
                        Grid.ColumnSpan="3"
                        Width="500"
                        Height="67"
                        VerticalContentAlignment="Top"
                        BorderBrush="{x:Null}"
                        BorderThickness="0"
                        FontSize="14.25"
                        IsEnabled="True"
                        IsReadOnly="True"
                        Text="{Binding SyntaxText, Mode=TwoWay}"
                        TextWrapping="Wrap" />
                </Grid>
                <Grid
                    Name="resultGrid"
                    Grid.Row="3"
                    Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="10" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="10" />
                    </Grid.RowDefinitions>
                    <Label
                        Grid.Column="1"
                        Width="100"
                        HorizontalAlignment="Left"
                        Content="RESULT"
                        FontSize="14.25"
                        FontWeight="Normal" />
                    <TextBlock
                        Name="res"
                        Grid.Row="1"
                        Grid.Column="1"
                        Width="200"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        FontSize="32"
                        Text="{Binding ResultText, Mode=TwoWay}"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />
                </Grid>
            </Grid>
        </Grid>
    </ScrollViewer>
</syncfusion:ChromelessWindow>
