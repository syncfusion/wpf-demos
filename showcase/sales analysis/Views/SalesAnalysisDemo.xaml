<controls:ChromelessWindow
    xmlns:controls="http://schemas.syncfusion.com/wpf"
    x:Class="syncfusion.salesanalysis.wpf.SalesAnalysisDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:syncfusion.salesanalysis.wpf"
    Title="Sales Analysis"
    BorderThickness="0"
    ResizeBorderThickness="8"
    ResizeMode="CanResizeWithGrip"
    WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.DataContext>
            <local:ViewModel />
        </Grid.DataContext>
        <Grid.Resources>

            <Style x:Key="gridSplitterStyle" TargetType="{x:Type GridSplitter}">
                <Setter Property="UIElement.SnapsToDevicePixels" Value="True" />
                <Setter Property="UIElement.Focusable" Value="False" />
                <Setter Property="FrameworkElement.Cursor" Value="SizeNS" />
                <Setter Property="Control.Template">
                    <Setter.Value>
                        <ControlTemplate>
                            <Border
                                Background="{TemplateBinding Panel.Background}"
                                BorderBrush="{TemplateBinding Border.BorderBrush}"
                                BorderThickness="{TemplateBinding Border.BorderThickness}">
                                <Border>
                                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                        <Ellipse
                                            Width="7"
                                            Height="7"
                                            Margin="0,0,3,0"
                                            Fill="#FFBCBCBC" />
                                        <Ellipse
                                            Width="7"
                                            Height="7"
                                            Margin="0,0,3,0"
                                            Fill="#FFBCBCBC" />
                                        <Ellipse
                                            Width="7"
                                            Height="7"
                                            Margin="0,0,3,0"
                                            Fill="#FFBCBCBC" />
                                    </StackPanel>
                                </Border>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

        </Grid.Resources>
        <Border Background="#FFEAEAEA">
            <Grid>
               
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="10" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25" />
                    <RowDefinition Height="0.4*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="0.3*" />
                    <RowDefinition Height="15" />
                </Grid.RowDefinitions>
                <GridSplitter
                    Grid.Row="2"
                    Grid.Column="1"
                    Height="8"
                    Margin="0,3,0,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Background="#FFEAEAEA"
                    Style="{StaticResource gridSplitterStyle}" />
                <Border
                    Grid.Row="1"
                    Grid.Column="1"
                    Background="#FFF4F4F4"
                    BorderBrush="#FFA0A0A0"
                    BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            Margin="10,5,0,5"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            FontFamily="Segoe UI"
                            FontSize="20"
                            Text="Regional Analysis" />
                        <Grid x:Name="mapContainer" Grid.Row="1">
                            <local:Maps x:Name="maps" />
                        </Grid>
                    </Grid>
                </Border>
                <Border
                    Grid.Row="3"
                    Grid.Column="1"
                    Margin="0,4,0,0"
                    Background="#FFF4F4F4">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40" />
                            <RowDefinition Height="*" />

                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.45*" />
                            <ColumnDefinition Width="0.55*" />
                        </Grid.ColumnDefinitions>
                        <Rectangle
                            Grid.Row="0"
                            Grid.ColumnSpan="2"
                            Width="2000"
                            Height="5"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Fill="#FFBCBCBC"
                            Stretch="Fill" />
                        <Path
                            Grid.Row="0"
                            Grid.ColumnSpan="2"
                            Width="250"
                            Height="40"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Data="F1 M 698.933,151.215L 506.579,151.215L 506.579,108.629L 718.933,108.629L 698.933,151.215 Z "
                            Fill="#FFBCBCBC"
                            Stretch="Fill" />
                        <TextBlock
                            Grid.Row="0"
                            Grid.ColumnSpan="2"
                            Margin="10,5,0,5"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            FontFamily="Segoe UI"
                            FontSize="20"
                            Text="Total vs Target" />
                        <Border
                            x:Name="gaugeContainer"
                            Grid.RowSpan="2"
                            BorderBrush="#A0A0A0"
                            BorderThickness="1,0,1,1">

                            <local:Gauge x:Name="gauge" Margin="0,40,0,0" />
                        </Border>
                        <Border
                            x:Name="chartContainer"
                            Grid.RowSpan="2"
                            Grid.Column="1"
                            BorderBrush="#FFA0A0A0"
                            BorderThickness="1,0,1,1">

                            <local:Chart x:Name="chart1" Margin="0,40,0,0" />
                        </Border>

                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</controls:ChromelessWindow>
