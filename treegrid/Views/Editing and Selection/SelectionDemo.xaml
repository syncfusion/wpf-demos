<democommon:DemoControl
    x:Class="syncfusion.treegriddemos.wpf.SelectionDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.treegriddemos.wpf"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    >

    <democommon:DemoControl.DataContext>
        <local:EmployeeInfoViewModel />
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Resources>
        <democommon:EnumDisplayNameConverter x:Key="enumDisplayNameConverter" />
        <local:SelectionImageConverter x:Key="SelectionImageConverter" />
    </democommon:DemoControl.Resources>

    <democommon:DemoControl.Options>
        <StackPanel>
            <TextBlock
                Margin="5"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="12"
                FontWeight="Bold"
                Text="Selection Mode:" />
            <ComboBox
                x:Name="cmbSelectionMode"
                Margin="5"
                ItemsSource="{democommon:EnumValuesExtension Type=syncfusion:GridSelectionMode}"
                SelectedIndex="1">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock VerticalAlignment="Center" Text="{Binding Converter={StaticResource enumDisplayNameConverter}}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <TextBlock
                Margin="5"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="12"
                FontWeight="Bold"
                Text="Navigation Mode:" />
            <ComboBox
                x:Name="cmbnavigationMode"
                Margin="5"
                ItemsSource="{democommon:EnumValuesExtension Type=syncfusion:NavigationMode}"
                SelectedIndex="1">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock VerticalAlignment="Center" Text="{Binding Converter={StaticResource enumDisplayNameConverter}}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <TextBlock
                Margin="5"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="12"
                FontWeight="Bold"
                Text="Selection Brush:" />

            <syncfusion:ColorPicker
                x:Name="colorPicker"
                Width="180"
                Margin="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Brush="#FFD4D4D4" />
        </StackPanel>
    </democommon:DemoControl.Options>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="3" />
            <RowDefinition Height="180" />
        </Grid.RowDefinitions>
        <syncfusion:SfTreeGrid
            Name="treeGrid"
            AutoExpandMode="RootNodesExpanded"
            AutoGenerateColumns="False"
            ChildPropertyName="ReportsTo"
            ColumnSizer="Star"
            ItemsSource="{Binding EmployeesListInfo}"
            LiveNodeUpdateMode="AllowDataShaping"
            NavigationMode="{Binding SelectedValue, ElementName=cmbnavigationMode}"
            ParentPropertyName="ID"
            SelectedIndex="0"
            SelectionBackground="{Binding Path=Brush, ElementName=colorPicker}"
            SelectionMode="{Binding SelectedValue, ElementName=cmbSelectionMode}">

            <syncfusion:SfTreeGrid.Columns>
                <syncfusion:TreeGridTextColumn MappingName="Title" />
                <syncfusion:TreeGridNumericColumn
                    HeaderText="Employee ID"
                    MappingName="ID"
                    NumberDecimalDigits="0" />
                <syncfusion:TreeGridTextColumn HeaderText="First Name" MappingName="FirstName" />
                <syncfusion:TreeGridTextColumn HeaderText="Last Name" MappingName="LastName" />
                <syncfusion:TreeGridCurrencyColumn
                    CurrencyDecimalDigits="2"
                    CurrencySymbol="$"
                    HeaderText="Salary"
                    MappingName="Salary" />
            </syncfusion:SfTreeGrid.Columns>
        </syncfusion:SfTreeGrid>
        <Border Grid.Row="1" />

        <Grid Grid.Row="2" DataContext="{Binding SelectedItem, ElementName=treeGrid}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="300" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Image
                    Name="image"
                    Height="140"
                    Margin="0,24,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Source="{Binding SelectedItem, ElementName=treeGrid, Converter={StaticResource SelectionImageConverter}}"
                    Stretch="Uniform" />
            </Grid>

            <Grid Grid.Column="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        HorizontalAlignment="Left"
                        FontWeight="Bold"
                        Text="Title" />
                    <TextBlock
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        Text="{Binding Title}"
                        TextWrapping="Wrap" />
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        HorizontalAlignment="Left"
                        FontWeight="Bold"
                        Text="Employee ID" />

                    <TextBlock
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        Text="{Binding ID}"
                        TextWrapping="Wrap" />
                </Grid>

                <Grid Grid.Row="2">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        HorizontalAlignment="Left"
                        FontWeight="Bold"
                        Text="First Name" />
                    <TextBlock
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        Text="{Binding FirstName}"
                        TextWrapping="Wrap" />

                </Grid>

                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        HorizontalAlignment="Left"
                        FontWeight="Bold"
                        Text="Last Name" />
                    <TextBlock
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        Text="{Binding LastName}"
                        TextWrapping="Wrap" />
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</democommon:DemoControl>
