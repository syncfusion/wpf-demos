<democommon:DemoControl
    x:Class="syncfusion.treemapdemos.wpf.TreeMapDrillDown"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.treemapdemos.wpf"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    Width="auto"
    Height="auto">

    <democommon:DemoControl.DataContext>
        <local:TreeMapDrillDownViewModel />
    </democommon:DemoControl.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="55" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.Resources>
            <local:TextToVisibilityConverter x:Key="conv" />
        </Grid.Resources>

        <Border Margin="10,10,10,0" Background="Black">
            <TextBlock
                Margin="10,0,50,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontFamily="Segoe UI"
                FontSize="25"
                FontWeight="Light"
                Foreground="#D3D3D3"
                Text="Largest Subdivisions by Population" />
        </Border>

        <syncfusion:SfTreeMap
            x:Name="treeMap"
            Grid.Row="1"
            Margin="10,0,10,10"
            BorderThickness="1"
            ColorValuePath="Area"
            DrillDownSelectionStroke="#1A9DAF"
            EnableDrillDown="True"
            ItemsSource="{Binding}"
            LeafLabelPath="Name"
            ShowToolTip="True"
            WeightValuePath="Population">
            <syncfusion:SfTreeMap.LeafItemSettings>
                <syncfusion:LeafItemSettings LabelPath="Name">
                    <syncfusion:LeafItemSettings.LabelTemplate>
                        <DataTemplate>

                            <TextBlock
                                Margin="5,5,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                FontSize="16"
                                FontWeight="Normal"
                                Foreground="Black"
                                Text="{Binding Data.Name}" />

                        </DataTemplate>
                    </syncfusion:LeafItemSettings.LabelTemplate>
                </syncfusion:LeafItemSettings>
            </syncfusion:SfTreeMap.LeafItemSettings>
            <syncfusion:SfTreeMap.ToolTipTemplate>
                <DataTemplate>
                    <Border
                        Width="200"
                        Height="100"
                        Background="#232323"
                        BorderBrush="#D3D3D3"
                        BorderThickness="1.5"
                        IsHitTestVisible="False">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.4*" />
                                <RowDefinition Height="0.6*" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Margin="5"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="22"
                                FontWeight="Light"
                                Foreground="#D3D3D3"
                                Text="{Binding Label}" />
                            <Grid Grid.Row="1" Margin="7">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    FontSize="13"
                                    FontWeight="Normal"
                                    Foreground="#D3D3D3"
                                    Text="{Binding TreeMap.WeightValuePath}" />
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    FontSize="13"
                                    FontWeight="Normal"
                                    Foreground="#D3D3D3"
                                    Text="{Binding Weight, StringFormat='#,#\\'}" />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    FontSize="13"
                                    FontWeight="Normal"
                                    Foreground="#D3D3D3"
                                    Text="{Binding TreeMap.ColorValuePath}" />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    FontSize="13"
                                    FontWeight="Normal"
                                    Foreground="#D3D3D3"
                                    Text="{Binding ColorWeight, StringFormat={}{0:N0} km²}" />
                            </Grid>
                        </Grid>
                    </Border>
                </DataTemplate>
            </syncfusion:SfTreeMap.ToolTipTemplate>
            <syncfusion:SfTreeMap.DrillDownHeaderTemplate>
                <DataTemplate>
                    <Border Background="#1A9DAF">
                        <StackPanel
                            Margin="10,0"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <Path
                                x:Name="path"
                                Width="8"
                                Height="16"
                                Data="M197,153.5 L197,138 186.75,145.5 z"
                                Fill="White"
                                Stretch="Fill"
                                Visibility="{Binding Path=Text, ElementName=headerText, Converter={StaticResource conv}}" />
                            <TextBlock
                                x:Name="headerText"
                                Margin="10,0"
                                FontFamily="Segoe UI"
                                FontSize="15"
                                FontWeight="Normal"
                                Foreground="White"
                                Text="{Binding}" />
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </syncfusion:SfTreeMap.DrillDownHeaderTemplate>
            <syncfusion:SfTreeMap.LeafColorMapping>
                <syncfusion:UniColorMapping Color="#CCDFE3" />
            </syncfusion:SfTreeMap.LeafColorMapping>
            <syncfusion:SfTreeMap.Levels>
                <syncfusion:TreeMapFlatLevel GroupPath="Continent" ShowLabels="True">
                    <syncfusion:TreeMapFlatLevel.LabelTemplate>
                        <DataTemplate>
                            <TextBlock
                                Margin="5,5,5,0"
                                FontFamily="Segoe UI"
                                FontSize="12.2"
                                Foreground="Black"
                                Text="{Binding Label}"
                                TextWrapping="Wrap" />
                        </DataTemplate>
                    </syncfusion:TreeMapFlatLevel.LabelTemplate>
                </syncfusion:TreeMapFlatLevel>
                <syncfusion:TreeMapFlatLevel GroupPath="Country" ShowLabels="True">
                    <syncfusion:TreeMapFlatLevel.LabelTemplate>
                        <DataTemplate>
                            <TextBlock
                                Margin="5,5,5,0"
                                FontFamily="Segoe UI"
                                FontSize="13"
                                Foreground="Black"
                                Text="{Binding Label}"
                                TextWrapping="WrapWithOverflow" />
                        </DataTemplate>
                    </syncfusion:TreeMapFlatLevel.LabelTemplate>
                </syncfusion:TreeMapFlatLevel>
            </syncfusion:SfTreeMap.Levels>
        </syncfusion:SfTreeMap>

    </Grid>
</democommon:DemoControl>
